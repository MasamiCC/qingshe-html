				                    +    	'<img src="../image/hotel_logo.png">'
				                    +    	'<img src="../image/hotel_logo.png">'
				                    +    	'<img src="../image/hotel_logo.png">'
				                    +    '</div>'
				                    +    '<div class="collection_count">'
				                    +    	'<div class="mui-pull-left">'
				                    +    		'<span><i class="fa fa-commenting-o"></i>122</span>'
				                    +    		'<span><i class="fa fa-thumbs-o-up"></i>122</span>'
				                    +    	'</div>'
				                    +    	'<div class="mui-pull-right">'
				                    +    		'2017-04-12 15:24'
				                    +    	'</div>'
				                    +    	'<div class="clear"></div>'
				                    +    '</div>'
						table.appendChild(li);
						
					}
					heartClick()
				}, 500);
			}
			function heartClick(){
				mui('.collection_shop').on('tap','i',function(){
					if (this.classList.contains('fa-heart')) {
						this.classList.remove('fa-heart')
						this.classList.add('fa-heart-o')
						mui.toast('取消收藏成功')
					} else if(this.classList.contains('fa-heart-o')){
						this.classList.remove('fa-heart-o')
						this.classList.add('fa-heart')
						mui.toast('收藏成功')
					}
					
				})
			}
