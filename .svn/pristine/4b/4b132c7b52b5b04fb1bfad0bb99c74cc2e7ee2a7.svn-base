/*
 * 体验版介绍页
 */

.container_nav{
	background-color: #ffe4bc;
	padding-top: 1.25rem;
}

/*锦鲤图*/
.koi_nav{
    padding: 0 0.31rem;
    /* width: 100%;	 */
}

.koi_area{
	width: 100%;
	height: 12.5rem;
	background: url(../../static/img/experience/experience_bg.png) bottom center no-repeat;
	background-size: cover;
	position: relative;
}

.koi_btn{
	position: absolute;
	width: 100%;
	bottom: 1.56rem;
	padding: 0 0.23rem;
	display: flex;
	display: -webkit-flex; /* Safari */
	justify-content: space-between;
}

.koi_btn .btn{
	width: 4.06rem;
	height: 1.09rem;
	line-height: 1.09rem;
	background-color: #fff;
	font-size: 0.41rem;
	color: #333;
	font-weight: bold;
	border-radius: 5px;
	text-align: center;
}

.koi_btn .btn:last-child{
	background-color: #333;
	color: #fff;
}


/*活动规则*/

.rule_nav .activity_img{
	width: 100%;
	height: auto;
	margin-top: 0.78rem;
}

.rule_title{
	display: block;
	width: 4.38rem;
	height: auto;
	margin: 0.78rem auto 0.47rem;
}

.rule_img{
	width: 100%;
	height: auto;
	margin-bottom: 0.7rem;
}