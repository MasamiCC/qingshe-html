#sliderSegmentedControl .mui-scroll{
	text-align: center;
	margin: 0 auto;
	left: 0;
	right: 0;
}
.mui-segmented-control.mui-scroll-wrapper{
	height: 40px;background: #fff;
}
.mui-segmented-control.mui-scroll-wrapper .mui-control-item{
	border-bottom: 2px solid #fff!important;
}
.mui-segmented-control.mui-segmented-control-inverted .mui-control-item.mui-active{
	color: #d4ac57;
	border-bottom: 2px solid #d4ac57!important;
}
.reply_con{
	font-size: 0.75rem;color: #333;line-height: 1.5;
}
.reply_con_img{
	font-size: 0;margin: 5px 0;
}
.reply_con img{
	display: inline-block;max-width: 30%;margin-right: 3%;
}
.reply_time{
	font-size: 0.75rem;color: #999;
}
.reply_item{
	margin: 10px 0;background: #fff;
}
.reply_item:first-child{
	margin-top: 0;
}
.reply_item:after{
	height: 0;
}
.reply_item > .reply_time{
	border-bottom: 1px solid #ddd;padding-bottom: 5px;
}
.mui-table-view{
	background: none;
}
.reply_title{
	padding-top: 5px;display: inline-block;font-size: 0.75rem;font-weight: 500;
}
.add_btn{
	max-width: 100px;
}
textarea{
	background: #eee!important;margin: 10px 0;font-size: 0.75rem;border-radius: 0.5rem;
	height: 5rem;
}
#submit_btn{
	width: 80%;margin: 0 auto;
}
.mui-input-group:after{
	height: 0;
}
