body{
    background: url(../images/bcard@3x.png) no-repeat;
    background-position: center;
	background-size: cover;
}
*{
    padding: 0;
    margin: 0;
    list-style: none;
}
.card{
    box-shadow: rgb(202, 202, 202) 0px 0px 10px;
    border-radius: 0.5rem;
    padding: 1rem;
    width: 80%;
    margin: 2rem auto;
    margin-top: 2rem;
    background-color: white;
}
.title{
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0.5rem 0;
}
ul>li>span{
    display: inline-block;
    text-align: center;
    border-radius: 99rem;
    line-height: 1.5rem;
    width: 1.5rem;
    height: 1.5rem;
    background-color: rgb(216, 215, 215);
    margin-right: 1rem;
    color: black;
}
ul>li{
    margin: 0.85rem 0;
    color: gray;
}
.txt{
    color: gray;
    letter-spacing: 1px;
    line-height: 28px;
    font-size: 15px;
}
.strong{
    font-weight: 600;
    color: black;
}
.center{
    text-align: center;
}
.blue{
    font-size: 14px;
    color: rgb(29, 154, 255);
    margin: 1.5rem 0;
}

button{
    display: flex;
    justify-content: center;
    font-size: 1.2rem;
    margin: 0 auto;
    letter-spacing: 2px;
    color: white;
    border: 0;
    background: linear-gradient(to right, rgb(254, 198, 48) , rgb(254, 156, 36));
    padding: 1rem 4rem;
    border-radius: 99rem;
    margin-top: 1rem;
    margin-bottom: 1rem;
}