.e_order{
	display: flex;
	align-items: center;
}
.e_order_shop{
	display: flex;
	align-items: center;
}
.e_form{
	margin: 15px auto;border-top: 1px dashed #ddd;padding-top: 15px;
}
.e_form_item{
	display: flex;
	align-items: flex-start;
	margin: 10px auto;
}
.e_form_item >label,.e_form_item>div{
	flex: 1;
}
.e_form_item >label{
	max-width: 80px;
	text-align: center;
	line-height: 2;
	color: #333;
	font-size: 14px;
}
.e_form_item textarea{
	resize: none;
	width: 50%;
	border-radius: 3px;
	border: 1px solid #eee;
	padding: 5px;
}
.e_img{
	width: 80px;height: 80px;margin: 5px;
}


.e_order{
	background: #fff6e4;color: #666;padding: 10px;
	border-radius: 10px;
}
.e_order >div{
	flex: 1;
}
.e_order_collect{
	max-width: 100px;
}
.e_order_time{
	max-width: 300px;
}
.e_order_shop >div{
	flex: 1;line-height: 2;
}
.e_order_shop>div:first-child{
	max-width: 80px;text-align: center;
}
.e_order_shop img{
	max-width: 100%;margin: 0 auto;border-radius: 50px;width: 50px;height: 50px;
}
.e_order_shop_title{
	font-size: 16px;font-weight: 600;color: #333;
}
.e_order_shop_title a,.e_order_shop_title a:hover{
	color: #333;text-decoration: none;
}
.e_order_shop ul{
	margin-bottom: 0;
}
.e_btn{
	background: #edb94a;
	border:none;
	color: #fff;
	padding: 5px 20px;
	margin-left: 25%;
}
.e_good{
	position: relative;width: 50%;
	line-height: 2;
	color: #666;
}
.e_zc{
	position: absolute;
	right: 10px;
	top: 0;
}
.e_zc span{
	display: inline-block;
	padding: 2px 10px;
	/*border: 1px solid #ccc;*/
	border-radius: 30px;
	line-height: 1;
	color: #666;
	cursor: pointer;
	font-size: 12px;
}
.e_zc span i{
	margin: 3px;
}
.zc_z.active{
	color: #edb94a;
	border-color: #edb94a;
}
.zc_c.active{
	color: #999;
	border-color: #999;
}

input[type=file]{
	display: none;
}

.e_img_div{
	display: inline-block;
	position: relative;
}
.e_img_div span{
	color: red;position: absolute;right: 5px;top: 5px;
	cursor: pointer;
}
.e_img_close{
	position: absolute;
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
	display: none;
	background: rgba(0,0,0,0.5);
}

.e_img_div_hidden{
	display: none;
}
