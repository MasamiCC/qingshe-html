/*all*/
.mui-content,body{
	background: #fff;
}
.mui-content{
	position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 44px;
    overflow: auto;
}
.etr_item_banner_top,.etr_item_banner_bottom,.last_content,.bottom_icons{
	font-size: 0;
	line-height: 0;
}
.etr_item_banner_top>div,.etr_item_banner_bottom>div,.last_content>div,.bottom_icons>div{
	display: inline-block;
}
/*all*/
/*banner*/
.etr_item{
	margin: 0.625rem;
}
.etr_title{
	margin: 0.9375rem 0;
	text-align: center;
	font-size: 1rem;
	color: #000;
	font-weight: bold;
}
.etr_font_black{
	font-size: 0.8125rem;
	color: #333;
	line-height: 1.7;
}
.etr_font_orange{
	font-size: 0.9135rem;
	color: #f8a120;
	line-height:1.7;
}
.bnner_top_inline{
	width: 30%;
	text-align: center;
	border-right: 1px solid #ddd;
	vertical-align: middle;
}
.etr_item_banner{
	text-align: center;
    background: #f4f4f4;
    padding: 26px 0 20px 0;
    border-radius: 8px;
    position: relative;
}
.bnner_top_inline:last-child{
	border-right: 0;
}
/*bar*/
.etr_item_banner_middle{
	position: relative;
	width: 86%;
	margin: 10px auto;
	text-align:center;
	height: 10px;
}
.bar_left{
	position: absolute;
	width: 0;
	height: 8px;
	background: #ffc12f;
	border-radius: 5px;
	border-top-right-radius: 0px;
	border-bottom-right-radius: 0px;
	left: 0;
	transition: width 2s;
	-moz-transition: width 2s;	/* Firefox 4 */
	-webkit-transition: width 2s;	/* Safari å’Œ Chrome */
	-o-transition: width 2s;
	z-index: 2;
}
.bar_right{
	position: absolute;
	width: 100%;
	height: 8px;
	background: #ddd;
	border-radius: 5px;
}
.bar_num{
	position: absolute;
	content:'0%';
	width: 40px;
	height: 15px;
	line-height: 15px;
	right: -35px;
	top: -4px;
	background:#faa031;
	border-radius:10px;
	z-index: 10;
	font-size: 0.875rem;
	color: #fff;
}
/*bar*/
/*banner_bottom*/
.etr_item_banner_bottom{
	text-align: left;
	padding: 0 0.75rem;
}
.black_sfont{
	font-family: arial;
	font-size: 0.875rem;
	color: #333;
	margin-right: 5px;
}
.bnner_bottom_inline{
	line-height: 2;
	color: #999;
	font-size: 0.75rem;
	width: 33%;
	text-align: center;
}

/*banner_bottom*/
.etr_item_banner_now{
	position: absolute;
	top: 0;
	right: 0;
}
.etr_item_banner_now img{
	width:48px;
}
/*banner*/
/*item2*/
.yellow_icon{
	display: inline-block;
	width: 3px;
	height: 12px;
	background: #f8a120;
	margin-right: 5px;
}
.etr_item_title{
	font-size: 0.875rem;
	margin-bottom: 10px;
	font-weight: bold;
}
.etr_item_content_top{
	font-size: 0.875rem;
	color: #333;
	line-height: 1.8;
	text-indent: 2em;
	overflow: hidden;
	height: 200px;
}
.etr_item_content_bottom{
	text-align: center;
	height: 20px;
	background: -moz-linear-gradient(top, #e6e6e6, #fff);
	background: -o-linear-gradient(top,#e6e6e6, #fff);
	background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#e6e6e6), to(#fff));
}
.down_icon{
	color: #999;
	font-size: 24px;
}
/*item2*/

/*item3*/
.pic_item_pic{
	max-width: 95%;
}
.pic_items{
    vertical-align: top;    padding: 0!important;    margin-left: 0.5rem;
}
.true_pics{
	text-align: center;margin-bottom:0.625rem ;background: #fff;    width: 100%;
    top: 0px;
}
.swiper-container {
        width: 100%;
    }
/*item3*/

/*item4*/
.etr_item_info_item{
	font-size: 0.9375rem;
	padding: 12px 10px;
	background: #f4f4f4;
	border-radius: 8px;
	margin-bottom: 12px;
}
.etr_item_info_item a{
	text-decoration: none;
	color: #333;
}
.etr_item_info_item i{
	font-size: 24px;
    line-height: 1;
    color: #ccc;
}
/*item4*/

/*item5*/
.last_title{
	text-align: center;
	font-size: 0.9375rem;
	font-weight: bold;
}
.img_icon img{
	width: 16px;
	margin-right: 5px;
}
.last_content_inline{
	text-align: center;
	width: 16.6%;
	vertical-align: bottom;
}
.last_content_inline>img,.img_con>img,.last_content_inline>a>img{
	border-radius: 50%;
	width: 75%;
}
.img_rel{
	position: relative;
}
.etr_first>img,.etr_second>img,.etr_third>img{
	position: absolute;
    top: 16%;
    left: 5%;
    right: 1%;
    bottom: 1%;
}
.img_rel>img{
	width:92%;
	border-radius:0 ;
}
/*item5*/
/*bottom*/
.confirm_btn {
    background: #fbb227;
    color: #fff;
    display: block;
    padding: 0px 45px;
    line-height: 50px;
    height: 50px;
    margin-right: -10px;
    font-size: 0.875rem;
}
.bottom_icons_con{
	width: 50%;
}
.bottom_icon{
	width:50%;
	vertical-align: middle;
}
.bottom_icon_pic img{
	width: 20px;
}
.bottom_icons{
	text-align: center;
}
.bottom_icon_pic{
	margin-bottom: 5px;margin-top: 5px;
	line-height: 1.5;
}
.ert_nav_bottom{
	background: #fff;
}
/*bottom*/
