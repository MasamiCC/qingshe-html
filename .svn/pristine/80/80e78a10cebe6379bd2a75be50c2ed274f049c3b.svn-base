<script type="text/javascript">
	$(function(){
	
	$(".time_choose").bind({
		'click':function(e){
			e.preventDefault();
			var now=new Date();
			var picker = new mui.DtPicker({
				endDate:new Date(),
				type:'month',
			});
			picker.show(function(rs){
				console.log(rs.value)
				var time=new Date(rs.value);
				var year=time.getFullYear();
				var month=time.getMonth()+1;
				month=(month<10)?'0'+month:month;
				console.log(month)
				console.log(year)
				$(".show_m").html('<span class="time_time">'+year+'年'+month+'月'+'</span>'+'<span><img src="../image/triangle_right.png"/></span>');
			})
			return false;
		}
		
	})
	
	
