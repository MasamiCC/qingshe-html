<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>已签约商户列表</title>
		<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
		<meta name="apple-mobile-web-app-capable" content="yes">
		<meta name="apple-mobile-web-app-status-bar-style" content="black">
		<link href="../../../css/mui.min.css" rel="stylesheet" />
	</head>
	<style type="text/css">
		*{
			padding: 0;
			margin: 0;
		}
		.all_ss,.signed_item{
			background: #F4F4F4;
		}
		.all_ss_title_con{
			background: #fff;
			text-align: center;
			position: relative;
		}
		.all_ssNew{
			position: absolute;
			top: 43px;
			right: 15px;
		}
		.all_ss_title{
			padding: 45px 0 16px 0;
			font-size: 1.125rem;
			font-weight: bold;
		}
		.signed_item{
			/*top: 80px;*/
		}
		.all_ssNew img{
			width: 23px;
		}
		.signedShop_item{
			display: flex;
			margin-top: 10px;
			background: #fff;
			padding: 10px 0;
		}
		.signedShop_img img{
			width: 40px;
		}
		.signedShop_img{
			flex: 0.5;
			display: flex;
			justify-content: center;
			align-items: center;
		}
		.signedShop_font{
			flex: 2;
		}
		.signedShop_name{
			font-size: 1rem;
			color: #333;
			line-height: 1.8;
		}
		.signedShop_dialog{
			font-size: 0.875rem;
			color: #999;
			letter-spacing: 0.1rem;
		}
	</style>
	<body>
		<div class="mui-content all_ss">
			<!--<div class="all_ss_title_con">
				<div class="all_ss_title">
					已签约商户列表
				</div>
				<div class="all_ssNew">
					<img src="../images/signedSNew.png"/>
				</div>
			</div>-->
			<div class="signed_item_con">
				<div id="pullrefresh" class="signed_item mui-content mui-scroll-wrapper">
					<div class="mui-scroll">
						<div class="signedShop_con">
							<div class="signedShop_item">
								<div class="signedShop_img">
									<img src="../images/signedListCheck.png"/>
								</div>
								<div class="signedShop_font">
									<div class="signedShop_name">
										小龙坎火锅（星湖101）
									</div>
									<div class="signedShop_dialog">
										2018年5月15日签约成功
									</div>
								</div>
							</div>
							<div class="signedShop_item">
								<div class="signedShop_img">
									<img src="../images/signedListCheck.png"/>
								</div>
								<div class="signedShop_font">
									<div class="signedShop_name">
										最上海私房菜馆
									</div>
									<div class="signedShop_dialog">
										2018年4月15日签约成功
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
<script src="../../../js/mui.min.js"></script>
<script src="../../../js/jquery-1.10.1.min.js"></script>
<script src="../../../js/mui.pullToRefresh.js" type="text/javascript" charset="utf-8"></script>
<script src="../../../js/mui.pullToRefresh.material.js" type="text/javascript" charset="utf-8"></script>
<script type="text/javascript">
	mui.init({
	pullRefresh: {
		container: '#pullrefresh',
		up: {
			contentrefresh: '正在加载...',
			callback: pullupRefresh,
			auto:true
		}
	}
});
var count = 0;

/**
 * 上拉加载具体业务实现
 */
function pullupRefresh() {
	setTimeout(function() {
		mui('#pullrefresh').pullRefresh().endPullupToRefresh((++count > 2)); //参数为true代表没有更多数据了。
		var sharecontainer = document.body.querySelector('.signedShop_con');
		var sharediv = document.body.querySelectorAll('.signedShop_item');
		for (var i = sharediv.length, len = i + 2; i < len; i++) {
			var div = document.createElement('div');
			div.className = 'share_foot_item_item_content';
			//字符串
		div.innerHTML=		'<div class="signedShop_item">'
						+		'<div class="signedShop_img">'
						+			'<img src="../images/signedListCheck.png"/>'
						+		'</div>'
						+		'<div class="signedShop_font">'
						+			'<div class="signedShop_name">'
						+				'小龙坎火锅（星湖101）'
						+			'</div>'
						+			'<div class="signedShop_dialog">'
						+				'2018年5月15日签约成功'
						+			'</div>'
						+		'</div>'
						+	'</div>'
			
		            
				sharecontainer.appendChild(div);
		}
	}, 1500);
}
</script>

