<script type="text/javascript">
	mui.init()
	$(function(){
		 loadCat();
		 loadPingjia();
		 $(".all_toggle").click(function(){
		 	$(".cat_list").toggleClass('cat_list_l')
		 })
		 $('.cat_list').on('tap','li',function(){
		 	var has=$(this).hasClass('active');
		 	if (!has) {
		 		$(this).siblings().removeClass('active');
		 		$(this).addClass('active')
		 	}
		 })
		 $(window).scroll(function(){
		 	var top=$("#tuijian_list").offset().top-$(window).scrollTop();
		 	if (top<0) {
		 		console.log('固定')
		 		$("#cat").addClass('cat_fixed')
		 	}else{
		 		$("#cat").removeClass('cat_fixed')
		 	}
		 })
		 $(".index_tui_item").on('tap',function(){
		 	location.href='shop_detail.html'
		 })
	})
	function loadCat(){
		var width=$(window).width();
		console.log(width)
		$(".cat_item").css({
			width:parseInt(width*0.35),
		})
		$(".cat_item img").css({
			width:parseInt(width*0.35),
			height:parseInt(width*0.35*1.33)
		})
	}
	function loadPingjia(){
		$(window).scroll(function(){
			var top=$(window).scrollTop();
			var height=$(window).height()
			$(".index_tui_pf").each(function(){
				var offsetTop=$(this).offset().top;
				if (offsetTop-top<=height) {
					$(this).addClass('active');
				}
			})
			if ($(document).height()-top==height) {
				//loadMoreShop()
			}
		})
	}
	var shopCount=1;
	var shopEnd=false;
	function loadMoreShop(){
		if (!shopEnd) {
			
			
			if (shopCount>=2) {
				shopEnd=true;
				mui.toast('没有更多数据了')
			}else{
				for( var i =0;i<10;i++){
					var html='<div class="index_tui_item">'
							+	'<div class="index_tui_shop_logo">'
							+		'<img src="../image/near_shop-03.png"/>'
							+		'<div class="index_tui_pf">'
							+			'<span>'
							+				'评分'
							+			'</span>'
							+			'<span>'
							+				'4.5'
							+			'</span>'
							+		'</div>'
							+	'</div>'
							+	'<div class="index_tui_shop_con">'
							+		'<h3>科尔马小镇海湾咖啡厅</h3>'
							+		'<p>'
							+			' 10.5KM | 西餐'
							+			'<span class="mui-pull-right to_see">进去看看</span>'
							+		'</p>'
							+	'</div>'
							+'</div>'
					$("#tuijian_list").append(html);
					loadPingjia()
				}
				shopCount++;
			}
			
		}else{
			mui.toast('没有更多数据了')
		}
	}
</script>