.si_banner{
	background: url(../image/newhead5.png) no-repeat;
	background-size: 100% 100%;
	padding: 18% 10px 32% 15px;
	position: relative;
	display: flex;
}
.heart_icon_con{
    position: absolute;
    text-align: center;
    right: 22px;
    top: 22%;
    flex: 1;
}
.si_banner_item:first-child{
	flex: 1;
}
.si_banner_item{
	flex: 2.9;
	display: flex;
}
.si_banner_item_first{
	flex: 3;
}
body,.activity_title,.activity_content{
	background: #f4f4f4;
}
