*{margin: 0;padding: 0;list-style: none;outline: none;}
.mui-bar-nav{box-shadow: none;background: #fff;}
.mui-content{background-color: #fff;position: absolute;bottom: 0;top: 0;left: 0;right: 0;overflow: auto; }
#cus_popover{
	position: absolute;top:3rem;bottom: 0;left: 0;right: 0;width: auto;border-bottom-right-radius: 0;border-bottom-left-radius: 0;text-align: center;
}
.cus_intro{font-size: 0;line-height: 0;margin-top: 30px;}
.cus_intro img{max-width: 100%;}
.cus-btns{padding: 2rem 0;}
.cus-btns div{display: flex;display: -webkit-flex;align-items: center;justify-content: space-between;margin: 0 2rem;}
.cus-btns div span{flex: 1;text-align: center;background-color: #ddd;color: #000033;position: relative;overflow: visible;border-radius: 1rem 0 0 1rem;font-size: 1rem;padding: 0.5rem 0;}
.cus_tj{
	color: #fff!important;
	background: -webkit-linear-gradient(left, #ffcd48 , #f8a120); /* Safari 5.1 - 6.0 */
	background: -o-linear-gradient(right, #ffcd48, #f8a120); /* Opera 11.1 - 12.0 */
	background: -moz-linear-gradient(right, #ffcd48, #f8a120); /* Firefox 3.6 - 15 */
	background: linear-gradient(to right, #ffcd48 , #f8a120); /* 标准的语法 */
	border-radius:0  1rem   1rem 0 !important;
}
.cus_tj:after{
	content: '';position: absolute;right: -0.2rem;top: -1.4rem;width: 3rem;height: 3rem; 
	background-position: center;background-size: contain;
	background-repeat: no-repeat;
}
.close-box{position: absolute;	right: 20px;	top: 30px;width: 30px;height: 30px;z-index: 99999;}
a.close {
	display: inline-block;
	width: 30px;
	height: 2px;
	background: #e0e0e0;
	line-height: 0;
	font-size: 0;
	vertical-align: middle;
	-webkit-transform: rotate(45deg);
	position: absolute;
	right: 0;
	top: 15px;
}
a.close:after {
	content: '/';
	display: block;
	width: 30px;
	height: 2px;
	background: #e0e0e0;
	-webkit-transform: rotate(-90deg);
}
.cus-popover-cont{position: absolute;top: 2rem ;bottom:0 ;left: 1rem;right: 1rem;display: flex;flex-direction: column;justify-content: space-between;overflow: auto;}
.cus-popover-cont .mui-scroll>div{padding: 0.5rem 0;}
.cus-name{font-size: 1.0rem;}
.cus_msg{text-align: left;font-size: 0.75rem;width: 90%;margin: 0 auto;}
.cus-introduce{color: #999;font-size: 0.75rem;}
.cus-img{font-size: 0;line-height: 0;}
.cus-img img{width: 5rem;height: 5rem;}
.cus-keywords{font-size: 1.56rem;}
table{border-collapse: separate;border-spacing:5px;margin: 0 auto; }
th,td{background-color: #eeeeee;font-size: 0.8rem;vertical-align: middle;padding: 0.2rem 0;color: #333;font-weight: normal;}
.cus_choose span{
	background: -webkit-linear-gradient(left, #ffcd48 , #f8a120); /* Safari 5.1 - 6.0 */
	background: -o-linear-gradient(right, #ffcd48, #f8a120); /* Opera 11.1 - 12.0 */
	background: -moz-linear-gradient(right, #ffcd48, #f8a120); /* Firefox 3.6 - 15 */
	background: linear-gradient(to right, #ffcd48 , #f8a120); /* 标准的语法 */
	color: #fff;
	display: inline-block;width: 80%;
	border-radius: 1rem;line-height: 2;
}
.mui-popup-backdrop{z-index: 999;}

/*20180620*/
#app{position: absolute;top: 0;left: 0;right: 0;bottom: 0;overflow: hidden;}
#popover_bg{position: fixed;top: 0;left: 0;right: 0;bottom: 0;overflow: hidden;background: rgba(0,0,0,0.5);}
#cus_popover{display: block;opacity: 1;}
.cus-popover-cont{display: block;}
.cus-popover-cont>div{padding: 0.5rem 0;}
.cus-table table{margin:0 auto;}
.cus-table table{border-collapse: separate;border-spacing:5px;margin: 0 auto; }
.cus-table th, .cus-table td{background-color: #eeeeee;font-size: 0.8rem;vertical-align: middle;padding: 0.2rem 0;color: #333;font-weight: normal;}
#dvMsgCT{width: 90%!important;margin: 0 auto;}