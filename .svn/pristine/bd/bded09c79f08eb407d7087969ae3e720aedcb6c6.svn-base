/*invite_friends*/
.invite_friends{
	font-size: 0;line-height: 0;
	text-align: left;
	margin: 0px 20px;
	padding-top: 10px;
}
.invite_friends>div{
	display: inline-block;
	line-height: 1;
	font-size: 0.875rem;
	vertical-align: middle;
}
.invite_friend1 img{
	width: 30px;
	height: 30px;
	border-radius: 50%;
	margin-right: 12px;
}
.invite_friend3{
	float: right;
	line-height: 2!important;
	color: #ff4a4a;
}
.invite_inline{
	margin-right: 5px;
	line-height: 2;
	color: #ffd452;
}
.invite_inline:first-child{
	color: #fe7200;
}
.invite_inline:last-child{
	margin-right: 0px;
	color: #ff4455;
}
.invite_friend2{
	font-size: 0;
	line-height: 0;
}
.invite_friend2>span{
	display: inline-block;
}
/*invite_friends*/
.chy_main_item{
	display: none;
}
.chy_show{
	display: block;
}
.chy_people,.chy_other{
	color: #fff;
}
.share_con img{
	max-width: 100%;
}



/*popover*/
#popover{
	position: absolute;
    height: 45%;
	width: 72%;
    margin: 0 auto;
    left: 0;
    right: 0;
    top: 25%;
    overflow: hidden;
    text-align: center;
    background: none;
    min-height: 290px;
    box-shadow: none;
}
#share_popover{
    position: absolute;
    height: 40%;
    width: 72%;
    margin: 0 auto;
    right: 0;
    top: 13%;
    left: 0;
    overflow: hidden;
    text-align: center;
    background:none;
    min-height: 158px;
    box-shadow: none;
}
.mui-backdrop{
	background-color: rgba(0,0,0,.6);
}
body{
	max-width: 600px;
}
.mui-content{
