<script type="text/javascript">
	mui.init({
				pullRefresh: {
					container: '#pullrefresh',
					down: {
						callback: pulldownRefresh
					},
					up: {
						contentrefresh: '正在加载...',
						callback: pullupRefresh
					}
				}
			});
			/**
			 * 下拉刷新具体业务实现
			 */
			function pulldownRefresh() {
				setTimeout(function() {
					var table = document.body.querySelector('#pingjia_list');
					var cells = document.body.querySelectorAll('.shop_detail_pj_item');
					for (var i = cells.length, len = i + 3; i < len; i++) {
						var li = '<div class="shop_detail_pj_item">'
				    		+	'<div class="shop_detail_pj_left">'
				    		+		'<img src="image/nohead.png">'
				    		+	'</div>'
				    		+	'<div class="shop_detail_pj_right">'
				    		+		'<ul>'
				    		+			'<li class="user">李梓萌  '+i+'<span class="user_lev"><i>V</i><small>1</small></span> <span class="pingjia_time">2017-03-21 15:56:25</span></li>'
				    		+			'<li class="user_xinyu">'
				    		+				'<img src="image/icon1.png" alt="">'
						    +				'<img src="image/icon1.png" alt="">'
						    +				'<img src="image/icon1.png" alt="">'
						    +				'<img src="image/icon1.png" alt="">'
						    +				'<img src="image/icon2.png" alt="">'
				    		+			'</li>'
				    		+			'<li class="pingjia">'
				    		+				'非常满意看起来感觉很好线条流畅用了感觉也很不错，不用再担心收到假币了，而且快递非常快，前一天下单第二天早上就收到......'
				    		+				'<div>'
				    		+					'<img src="image/shop_2.png">'
				    		+					'<img src="image/shop_2.png">'
				    		+					'<img src="image/shop_2.png">'
				    		+				'</div>'
				    		+			'</li>'
				    		+		'</ul>'
				    		+	'</div>'
				    		+'</div>';
						//下拉刷新，新纪录插到最前面；
						//table.insertBefore(li, table.firstChild);
						$('#pingjia_list').prepend(li)
					}
					mui('#pullrefresh').pullRefresh().endPulldownToRefresh(); //refresh completed
				}, 1500);
			}
			var count = 0;
			/**
			 * 上拉加载具体业务实现
			 */
			function pullupRefresh() {
				setTimeout(function() {
					mui('#pullrefresh').pullRefresh().endPullupToRefresh((++count > 2)); //参数为true代表没有更多数据了。
					var cells = document.body.querySelectorAll('.shop_detail_pj_item');
					for (var i = cells.length, len = i + 5; i < len; i++) {
						var li = '<div class="shop_detail_pj_item">'
				    		+	'<div class="shop_detail_pj_left">'
				    		+		'<img src="image/nohead.png">'
				    		+	'</div>'
				    		+	'<div class="shop_detail_pj_right">'
				    		+		'<ul>'
				    		+			'<li class="user">李梓萌  '+i+'<span class="user_lev"><i>V</i><small>1</small></span> <span class="pingjia_time">2017-03-21 15:56:25</span></li>'
