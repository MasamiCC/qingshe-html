.hearticonnew{
	display: inline-block;
	font-size: 0.875rem;
	color: #fff;	
	position: absolute;
	bottom: 13%;
	left: 0;
	right: 0;
	margin: 0 auto;
	white-space: nowrap;
	line-height: 1.1;
}
.newheartimgbg{
	position: relative;
}
.newheartimgbg img{
    width: 83px;
    /*height: 53%;*/
    line-height: 1;
    border-radius: 0;
}
.si_main{
	background: #f4f4f4;
}
.si_top_first{
	font-size: 0;
	line-height: 0;
	margin: 0 15px;	
}
.si_top_first>div{
	display: inline-block;
}
.si_top{
	background: url(../image/qiandaobg.png);
	background-size: 100% 100%;
	/*height: 176px;*/
	text-align: left;
	margin-top: 18px;
}
.si_top_first_con{
	font-size: 0.875rem;
	line-height: 1.5;
	color: #fff;
}
.si_top_first_con>div{
	display: inline-block;
}
.si_top_first_con_left{
	padding-top: 7%;
	margin-left: 15px;
}
.mui-switch-mini {
    width: 35px!important;
    height: 18px!important;
}
.mui-switch .mui-switch-handle{
	width: 17px;
    height: 17px;
    left: 0px;
    top: -2px;
}
.qiandaofont{
	width: 30px;
	height: 30px;
	line-height: 1;
	color: #fff;
	font-size: 0.75rem;
}
.si_top_first_con{
	vertical-align: middle;
}
.si_top_first_con_con1{
	margin-right: 5px;
	line-height: 1.2;
}
.si_top_first_con_con1,.si_top_first_con_con2{
	vertical-align: middle;
	display: inline-block;
}
.si_top_first_con2{
	width: 25%;
    /*margin-right: 13px;*/
    margin-top: 6%;
}
.mui-switch.mui-active{
    border-color: #d70050;
	background-color: #d70050;
}
.num_con{
	display: inline-block;
	padding: 1px 6px;
	border-radius: 5px;
	margin: 0 5px;
	background: #fff;
	height: 14px;
	line-height: 1;
	vertical-align: middle;
	color: #ca001d;
}
.si_top_second{
	text-align: center;
	position: relative;
}
.biicon{
	display: inline-block;
	font-size: 0.75rem;
	width: 16px;
	height: 16px;
	background: #ffbf2e;
	border-radius: 50%;
	line-height: 16px;
	color: #bd7b18;
}
.si_main_sign_item_item img{
	width: 18px;
	height: 18px;
	
}
.newunsign img{
	width: 10px;
	height: 10px;
}
.si_top_second{
	margin-top: 20px;
	padding-bottom: 2%;
}
.signinicon{
	position: relative;
	margin-top: 5px;
	height: 22px;
	justify-content: center;
    align-content: center;
    align-items: center;
    display: flex;
}
.signinicon:after{
	content:"";
	position: absolute;
	width: 100%;
	border-top: 1px solid #b6b6b6;
	top: 10px;
	left: 50%;
}
.si_main_sign_item:last-child .signinicon:after{
	border:0;
	width: 0;
}

@media only screen and (max-width: 320px) {
	.line{
	    width: 76%!important;
	}
}
@media only screen and (min-width: 376px) and (max-width: 414px) {
	.line{
	    width: 80%!important;
	}
}
.line{
    border-top: 1px solid #c3c4c3;
    width: 79%;
    position: absolute;
    left: 42px;
    top: 37%;
    z-index: 0;
}
.si_main_sign_item_item img{
	position: relative;
	z-index: 10;
}
.newsi_information{
	font-size: 0.8125rem;
    margin-top: 3%;
    color: #11100e;
    line-height: 1;
    padding-bottom: 2%;
}
.newactivity_title{
	text-align: center;
}
.newactivity_title img{
	width: 50%;
}
.activity_content{
	font-size: 0;
	line-height: 0;
	margin-bottom: 10px;
}
.firstline{
	height: 29px;
	display: flex;
	align-content: center;
	justify-content: center;
	align-items: center;
}
.firstline img{
	width: 29px;
	height:27px ;
}
.popover_middle{
	background: -moz-linear-gradient(top, #993e8e, #dc2e47);
	background: -o-linear-gradient(top,#993e8e, #dc2e47);
	background: -webkit-gradient(linear, 100% 100%, 0% 100%, from(#993e8e), to(#dc2e47));
	color: #fff;
	line-height: 1.5;
}
#myPopover div{
	width: 84%;
	border-radius: 20px;
}
.popover_middle_first{
	padding-top: 25%;	
	line-height: 2;
	font-size: 1.125rem;
}
.popover_middle_second{
	padding-bottom: 16%;
	line-height: 1.8;
	font-size: 1.25rem;
}
.mui-popover{
	box-shadow: 0 0 15px rgba(0,0,0,0.75);
}
.myPopover_top{
	position: relative;
}
.popover_header1{
    position: absolute!important;
    top: -48%;
    left: 13%;
    z-index: 5;
}
.popover_header2{
    position: absolute!important;
    z-index: 5;
    top: -35%;
    left: 10%;
}
.popover_bottom{
    position: absolute!important;
   	top: 47%;
    left: 4%;
    z-index: -1;
}
.popover_header1 img{
	width: 50%;
	height: 50%;
}
.popover_header2 img,.popover_bottom img{
	max-width: 100%!important;
}

