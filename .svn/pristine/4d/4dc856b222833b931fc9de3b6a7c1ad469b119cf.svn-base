.order-y{
	color: #e0aa58;
}
.order-dg{
	color: #333;
}
.order_item{
	font-size: 0;display: flex;align-items: center;margin-bottom: 0;position: relative;
	overflow: hidden;
}
.order_item:after{
	height: 1px;
	left: 170px;
	content: '';
	background: #eee;
	position: absolute;
	bottom: 0;
	width: 85%;
}
.order_item li{
	vertical-align: top;font-size: 12px;flex: 1;
}
.order_item_header{
	background: #eeeeee;padding: 9px 0;margin: 5px auto;
}
.order_item_header li{
	text-align: center;
}
.order_item_header li:
.order_handle{
	max-width: 80px;text-align: center;
}
.order_status{
	max-width: 100px;text-align: center;
}
.order_price{
	max-width: 100px;text-align: center;
}
.order_price p{
	color: #999;
}
.order_time{
	max-width: 80px;position: relative;text-align: right;padding-right: 10px;font-size: 12px;
}
.order_time p{
	margin: 0;
}
.order_time h5{
	font-weight: bold;font-size: 14px;line-height: 1.5;margin: 0;
}
.order_time i{
	position: absolute;top: 39%;right: -9px;background: #fff;padding: 4px;color: #ddd;
}
.order_detail{
	display: flex;
	align-items: center;
	border-left:1px solid #eee ;
	font-size: 12px;
	color: #666;
	
}
.address_list  .order_detail{
	padding: 20px 0 20px 20px;
}
.address_list  .order_time{
	color: #999;
}
.order_detail h4{
	font-weight: bold;font-size: 15px;line-height: 2;margin: 0;
}
.order_detail p{
	margin: 0;line-height: 1.8;
}
.order_detail_left,.order_detail_right{
	flex: 1;
}
.order_detail_right h4 a{
	color: #333;text-decoration: none;
}
.order_detail_right h4 a:hover{
	color: #333;text-decoration: none;
}
.order_detail_left{
	max-width: 70px;
	text-align: center;
	min-width: 65px;
}
.order_detail_left img{
	width: 45px;
	height: 45px;
	border-radius: 45px;
}
.empty{
	text-align: center;line-height: 10;
}
.nav-tabs>li.active>a, .nav-tabs>li.active>a:focus, .nav-tabs>li.active>a:hover{
	border: none;color: #e0aa58;
	background: none;
}
.nav-tabs>li>a{
	color: #666;border: none;
}

.nav-tabs>li>a:hover {
    border: none;
    background: none;
}
.nav-tabs{
	border-bottom-color:#f7f7f7 ;
}
.order_pics{
	max-width: 150px;
	text-align: center;
}
.order_pics img{
	max-width: 40px;margin: 4px;
}
.order_pics div{
	cursor: pointer;text-align: center;text-decoration: underline;
}
.evaluate_evaluate{
	display: -webkit-box;
    overflow: hidden;
    white-space: normal!important;
    text-overflow: ellipsis;
    word-wrap: break-word;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    position: relative;
    color: #666;
}
.order_evaluate p{
	margin-bottom: 5px;
}
.evaluate_goods{
	display: -webkit-box;
    overflow: hidden;
    white-space: normal!important;
    text-overflow: ellipsis;
    word-wrap: break-word;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    position: relative;
    color: #666;
    line-height: 1.5!important;
    padding-right: 5px;
}
.evaluate_answer{
	color: #333;
	display: -webkit-box;
    overflow: hidden;
    white-space: normal!important;
    text-overflow: ellipsis;
    word-wrap: break-word;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    position: relative;
    font-weight: 700;
}
.order_header .order_detail{
	text-align: left;
	text-indent: 35px;
	max-width: 445px;
	/*padding-left: 35px;*/
}
