* {
    margin: 0;
    padding: 0;
}



.title {
    font-size: 1.3rem;
    font-weight: 600;
}

.l_title {
    font-size: 0.7rem;
    color: gray;
    letter-spacing: 1px;
    margin-top: 1rem;
    margin-bottom: 1rem;
}

.article {
    overflow-y: auto;
    margin-top: 0.8rem;
    font-size: 0.9rem;
    letter-spacing: 1px;
    line-height: 1.3rem;
    position: fixed;
    bottom: 4rem;
    top: 0rem;
    right: 1rem;
    left: 1rem;
}

.txt>img {
    width: 100%;
    margin: 0.8rem 0rem;
}

.txt_bottom {
    text-decoration: underline;
}

.bottom_Nav {
    width: 100%;
    height: 3rem;
    border-top: 1px solid rgb(240, 240, 240);
    position: fixed;
    bottom: 0px;
    color: gray;
    font-size: 0.8rem;
}

.bottom_left {
    width: 49%;
    height: 100%;
    border-right: 1px solid rgb(240, 240, 240);
    display: flex;
    align-items: center;
    float: left;
}

.bottom_left>img {
    width: 1.3rem;
    height: 1.3rem;
    margin-left: 1rem;
    margin-right: 0.5rem;
}

.bottom_right {
    width: 49%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    float: right;
}

.bottom_right>img {
    width: 1.5rem;
    height: 1.2rem;
    margin-right: 5px;
}