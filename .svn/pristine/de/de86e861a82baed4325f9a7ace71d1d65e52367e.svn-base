					 总计<span><small>￥</small></span><span class="total_amount">500.00</span>
				</div>
			</div>
			
			
			<div class="mui-pull-right">
				<span class="confirm_btn">确认支付</span>
			</div>
		</nav>
	</body>
</html>
<script type="text/javascript">
	
		var maxtime = 15*60 //一个小时，按秒计算，自己调整!   
			function CountDown(){   
		if(maxtime>=0){   
		minutes = Math.floor(maxtime/60);   
		seconds = Math.floor(maxtime%60);
		if(minutes<10){
			minutes="0"+minutes; 
		}
		if(seconds<10){
			seconds="0"+seconds;
		}
		
		msg = "00:"+minutes+":"+seconds;   
		document.all["timer"].innerHTML=msg;   
		if(maxtime == 5*60) alert('注意，还有5分钟!');   
		--maxtime;   
		}   
		/*else{   
		clearInterval(timer);   
		alert("时间到!");   
		}   */
		}   
		timer = setInterval("CountDown()",1000);
		
	
</script>