*{
	padding: 0;
	margin: 0;
}
input[type=checkbox]{
	display: none;
}
.top{
	line-height: 0;
}
.voting_banner{
	text-align: center;	
}
.voting_banner img{
	max-width: 100%;
}
.voting_main{
	background: #3bbcb0;
}
.voting_main_title{
	font-size: 0.875rem;
	line-height: 1.8;
	color: #fff;
	padding: 15px 0;
	margin: 0 10px;
	border-bottom: 1px dashed #fff;
}
.voting_main_main_title{
	font-size: 0.875rem;
	color: #fff;
	line-height: 1.5;
	padding: 30px 10px;
	
}
.main_top_title,.voting_main_main_title,.fontweight,.main_main_get_title{
	font-weight: bold;
}

/*.vote_item{
	font-size: 0;
	line-height: 0;
}*/
/*.vote_item>div{
	display: inline-block;
}*/
.vote_item{
	
	color: #f2efdb;
	font-size: 0.9375rem;
	line-height: 2.8;
	
}
.voting_main_main_main{
	padding-left: 60px;
	padding-right: 20px;
}
.vote_item  input[type=checkbox]{
	width: 18px;
	height: 18px;
	border: 1px solid #8eeecf;
	border-radius: 4px;
	vertical-align: middle;
	margin-right: 15px;
	
}
.vote_item  input[type=checkbox]:checked+label{
	background: url(../image/c_box_checked.png) no-repeat scroll top left;
}
.vote_item input[type=checkbox]+label{
	background: url(../image/c_box.png) no-repeat scroll top left;
	padding-left: 30px;
}
.voting_main_bottom{
	text-align: center;
}
.voting_main_bottom_submit{
	color: #ff5400;
	font-size: 1rem;
	line-height: 1;
	padding: 13px 80px;
	background: #ffe361;
	border-radius: 50px;
	border: 2px solid #fff;
}
.voting_main_bottom_submit_con{
	margin: 30px 0 45px 0;
	padding: 2px;
	background: #ffe361;
	border-radius: 50px;
}
.voting_main_bottom div{
	display: inline-block;
}
.main_top{
	text-align: center;
}
.main_top_title{
	color: #000;
	font-size: 1rem;
	/*display: inline-block;*/
	/*padding: ;*/
	background: #f2efdb;
	border: 5px solid #3bbcb0;
	padding: 10px 0;
	margin: 0px 10px 15px 10px;
}
.main{
	background: #f2efdb;
	padding: 15px 0;
}
.v_orange{
	color: #ff6600;
}
.main_main>div{
	font-size: 1rem;
	padding-left: 10px;
	line-height: 2;
	color: #000;
	
}
.main_main_fonts{
	font-size: 0.875rem!important;
	padding-top: 15px;
}
.main_main_get{
	padding:0 10px;
	border: 1px solid #3bbcb0;
	margin: 0 10px 0 0;
}
.main_main_get_title{
	font-size: 1rem;
	color: #000;
	padding: 15px 0 5px 0;
}
.main_main_get_main{
	font-size: 0.875rem;
	color: #000;
}
.main_main_get_bottom {
	font-size: 0.875rem;
	line-height: 1.3;
	padding:3px 0 20px 0;
}
.main_main_get_main div{
	line-height: 1.8;
	padding: 6px 0;
}

.main_bottom{
	font-size: 0;line-height: 0;text-align: center;
	margin: 5px 0 13px 0;
}
.main_bottom>div{
	display: inline-block;
	width: 30%;
	font-size: 0.8125rem;
}
.reward_title{
	color: #fff;
	line-height: 2;
	background: #3bbcb0;
	border-top-left-radius: 6px;
	border-top-right-radius: 6px;
}
.reward_content{
	text-align: center;
	line-height: 1.5;
	padding: 5px 0;
	color: #333;
	border-left: 2px solid #3bbcb0;
	border-right: 2px solid #3bbcb0;
	border-bottom: 2px solid #3bbcb0;
}
.main_bottom_reward{
	margin: 15px 4px 0 4px;
}



