/*
 * 引导页样式
 */

 html,body{
 	height: 100%;
 }

/*
 * 首页一屏样式 
 */

 .index_nav{
 	height: 100%;
 	width: 100%;
 	min-width: 1280px;
 	overflow: hidden;
 	background-image: url(../static/img/indexBanner_low.jpg);
 	background-size: cover;
 	background-repeat: no-repeat;
 	background-position: center center;
 }

 .index_area{
 	width: 80%;
 	margin: 0 auto;
 }

 /*头部*/
 .index_top{
 	padding-top: 30px;
 	overflow: hidden;
 }

 .index_top .logo{
 	float: left;
 	width: 200px;
 	height: auto;
 }

 .index_top .enter_official{
 	display: block;
 	float: right;
 	height: 42px;
 	line-height: 42px;
 	color: #FFFFFF;
 	padding: 0 55px;
 	border: 1px solid #FFFFFF;
 	-webkit-transition: .5s 0s all;
 	-o-transition: .5s 0s all;
 	-moz-transition: .5s 0s all;
 	-ms-transition: .5s 0s all;
 	transition: .5s 0s all;
 }

 .index_top .enter_official:hover{
 	color: #b39054;
 	border: 1px solid #b39054;
 }

 .index_blackCard {
 	margin-top: 50px;
 }

 .index_blackCard > img{
 	display: block;
 	margin: 0 auto;
 }

 .index_blackCard .black_card{
 	border-radius: 15px;
 	width: 490px;
 	height: auto;
 	box-shadow: 0px 0px 30px 0px #E2E2E2; 
 }

 .index_blackCard .index_title{
 	margin-top: 230px;
 }

/*
 * 介绍区域
 */
 .introduce_area{
 	width: 100%;
 	height: 700px;
 	background-size: cover;
 	background-repeat: no-repeat;
 	background-position: center center;
 	position: relative;
 	overflow: hidden;
 }

 .introduce_area.introduce_1{
 	background-image: url(../static/img/contentImg1_low.jpg);
 }

 .introduce_area.introduce_2{
 	background-image: url(../static/img/contentImg2_low.jpg);
 }

 .introduce_area.introduce_3{
 	background-image: url(../static/img/contentImg3_low.jpg);
 }

 .introduce_area.introduce_4{
 	background-image: url(../static/img/contentImg4_low.jpg);
 }

 .introduce_area.introduce_5 .join_us_bg{
 	background-image: url(../static/img/contentImg5_low.jpg);
 }

 .introduce_area.introduce_1 .word_area{
 	right: 0;
 }

 .introduce_area.introduce_2 .word_area{
 	left: 0;
 }

 .introduce_area.introduce_3 .word_area{
 	right: 0;
 }

 .introduce_area.introduce_4 .word_area{
 	left: 0;
 }

 .word_area{
 	position: absolute;
 	top: 50%;
 	width: 680px;
 	height: 280px;
 	margin-top: -130px;	
 }
.textAlignRight{
	text-align: right;
}
.textAlignLeft{
	text-align: left;
}
 /*.word_area > img{
 	width: 100%;
 	height: 100%;
 }*/

 /*加入我们*/
 .join_us_bg{
 	position: absolute;
 	top: 0;
 	left: 0;
 	right: 0;
 	bottom: 0;
 	width: 100%;
 	height: 100%;
 	background-size: cover;
 	background-repeat: no-repeat;
 	background-position: center center;
 	-webkit-transform-origin: 50% 50%;
 	-moz-transform-origin: 50% 50%;
 	-o-transform-origin: 50% 50%;
 	-ms-transform-origin: 50% 50%;
 	transform-origin: 50% 50%;
 	-webkit-transition: 16s 0s all ease;
 	-o-transition: 16s 0s all ease;
 	-moz-transition: 16s 0s all ease;
 	transition: 16s 0s all ease;
 	-webkit-transform: scale(1.1,1.1);
 	-o-transform: scale(1.1,1.1);
 	-moz-transform: scale(1.1,1.1);
 	transform: scale(1.1,1.1);
 }

 .introduce_5_in .join_us_bg{
 	-webkit-transform: scale(1,1);
 	-o-transform: scale(1,1);
 	-moz-transform: scale(1,1);
 	transform: scale(1,1);
 }
 .introduce_5{
 	height: 816px;
 }
 .join_us_area{
 	padding-top: 180px;
 	font-family: "宋体";
 	position: relative;
 	z-index: 2;
 }
 .join_word_all{
 	text-align: center;
 	color: #FFFFFF;
 }
 .join_word{
 	font-weight: bold;
	font-size: 80px;
	font-family: simhei;
 }
 .join_us_area_content{
 	font-size: 48px;
 	font-family: simsun;
 }
 .join_link{
 	text-align: center;
 	margin-top: 90px;
 }

 .join_link > a{
 	display: inline-block;
 	height: 70px;
 	line-height: 70px;
 	color: #FFFFFF;
 	font-size: 34px;
 	border: 1px solid #FFFFFF;
 	padding: 0 70px;
 	-webkit-transition: .5s 0s all;
 	-o-transition: .5s 0s all;
 	-moz-transition: .5s 0s all;
 	-ms-transition: .5s 0s all;
 	transition: .5s 0s all;
 }

 .join_link > a:hover{
 	color: #b39054;
    border: 1px solid #b39054;
 }
 
