	<script type="text/javascript">
	
		
		$(function(){
//				 $("#service3").click(function(){
//				 	$("#s3").show();
//				 });
				
				 $("#close,#close1").click(function(){
				 	$("#s3").hide();
				 });
				 $('.serv').on('click','li',function(){
				 	$(this).toggleClass('active');
				 	var id=$(this).attr('id');
				 	if (id=='service3') {
				 		$("#s3").show();
				 	}
				 })
				 $('.pay_way').each(function(){
				 	$(this).bind({
				 		'click':function(){
				 			
				 			if (!$(this).hasClass('pay_way_active')) {
				 				$(".pay_way").removeClass('pay_way_active');
				 				$(this).addClass('pay_way_active')
				 				var index=$(this).index();
				 				$(".erm_div").hide().eq(index).show()
				 			}
				 		}
				 	})
				 })
				 $('input[name=type]').each(function(){
				 	$(this).bind({
				 		'click':function(){
				 			console.log($(this).val())
				 			if ($(this).val()==1) {
				 				$(".pingtai_year").show()
				 			} else{
				 				$(".pingtai_year").hide()
				 			}
				 		}
				 	})
				 })
				 var index='';
				 $(".pay_btn").bind({
				 	'click':function(){
				 		var type=$('input[name=type]:checked').val();
				 		var payWay=$(".pay_way_active").html();
				 		var imgurl=(payWay=='微信')?'../img/wechat_erm.png':'../img/wechat_erm.png';
				 		index=layer.open({
							title:'扫码支付',
							type: 1,
							area: ['200px', '200px'],
							fixed: false, //不固定
							maxmin:false,
							content: '<div class="erm_div"><img src="'+imgurl+'"/><p>'+payWay+'扫一扫支付</p></div>'
						});
				 	}
				 })
		});
		
		
