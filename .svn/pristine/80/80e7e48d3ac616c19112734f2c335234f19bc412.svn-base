*{
	padding: 0;
	margin: 0;
}
body{
	background: #F4F4F4;
}
header{
	background: #fff;
}
.pics img{
	max-width: 100%;
}
.font1{
	font-size: 0.875rem;
	color: #333;
	font-weight: bold;
}
.font1,.font3{
	line-height: 2;
}
.font2{
	font-size: 0.75rem;
	color: #666;
	line-height: 1.4;
}
.font3{
	font-size: 0.75rem;
	color: #999;
}
.cart-btn{
	width: 1.3rem;
	vertical-align: middle;
}
.red{
	font-size: 0.875rem;
	color: #D91A1A;
}
.bottom div{
	display: inline-block;
}
.shop_message{
	margin: 10px 10px;
	background-color: #f4f4f4;
}
.js_btn{
	background: #d4ac57;color: #fff;display: inline-block;position: absolute;right: 0;
	padding: 17px 25px;
	font-size: 0.875rem;
}
#nav{
	background: #fff;
	height: 55px;
}
.lastli{
	margin-bottom: 65px;
}
.total_price{
	/*padding-left: 20px;*/
	font-weight: bold;color:#D91A1A ;font-size: 1rem;
}
