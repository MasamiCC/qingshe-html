/*
 * 体验版介绍页
 */
html,body{
	width: 100%;
	height: 100%;
}

/*锦鲤图*/
.koi_nav{
    padding: 1.4rem 0.31rem 0;
    width: 100%;
    height: 100%;
    background-color: #ffe4bc;
    position: relative;
}

.legal_link{
	position:absolute;
	display: block;
	height: 1.25rem;
	width: 2.5rem;
	top: .8rem;
	right: 0;
}

.legal_link img{
	width: 100%;
	height: 100%;
}

.koi_area{
	width: 100%;
	height: 100%;
	background: url(../../img/experience/experience_bg.png) bottom center no-repeat;
	background-size: 100% 100%;
	position: relative;
}

.koi_btn{
	position: absolute;
	width: 100%;
	bottom: 10%;
	padding: 0 0.23rem;
	display: flex;
	display: -webkit-flex; /* Safari */
	justify-content: space-between;
}

.koi_btn .btn{
	width: 4.06rem;
	height: 1.09rem;
	line-height: 1.09rem;
	background-color: #fff;
	font-size: 0.41rem;
	color: #333;
	font-weight: bold;
	border-radius: 5px;
	text-align: center;
}

.koi_btn .btn:last-child{
	background-color: #333;
	color: #fff;
}


/*活动规则*/

.rule_nav{
	width: 100%;
	height: 100%;
}

.rule_nav .activity_img{
	width: 100%;
	height: 100%;
}


