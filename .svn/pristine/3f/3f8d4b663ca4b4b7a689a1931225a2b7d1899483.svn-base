.container_nav{
    width: 100%;
    background-image: url(../../img/experience/luck_bg.png);
    background-repeat: no-repeat;
    background-position: top center;
    padding: 1.09rem 0.31rem;
    background-size: cover;
}

/**
 * 标题区域
 */
.luck_title{
    text-align: center;
    position: relative;
}

.luck_title .title_img{
    width: 7.5rem;
    height: auto;
}

.luck_title .rule_icon{
    width: 1.41rem;
    height: 0.62rem;
    position: absolute;
    right: 0;
    bottom: -0.94rem;
    background-image: url(../../img/experience/luck_index.png);
    background-size: 7.81rem 3.94rem;
    background-repeat: no-repeat;
    background-position: 0 0;
}


/**
 * 抽奖区域
 */

.draw_nav{
    height: 12.34rem;
    margin-top: 0.85rem;
    width: 8.98rem;
    margin: 0.78rem auto 0;
    background-image: url(../../img/experience/draw_nav_bg.png);
    background-repeat: no-repeat;
    background-position: top center;
    background-size: 100% 100%;
    position: relative;
}

.draw_nav .rotate {
	width: 6.95rem;
	height: 6.95rem;
	z-index: 2;
	position: absolute;
	left: 50%;
	margin-left: -3.55rem;
	top: 1.29rem;
	overflow: hidden;

}

.rotate_base{
	position: absolute;
    width: 100%;
    height: 100%;
    clip: rect(0rem, 6.95rem, 6.95rem, 3.475rem);
}

.rotate_bing {
    position: absolute;
    width: 100%;
    height: 100%;
    clip: rect(0, 3.475rem, 6.95rem, 0);
    -moz-border-radius: 3.475rem;
    -webkit-border-radius: 3.475rem;
    border-radius: 3.475rem;
}

.rotate_base:nth-child(odd) .rotate_bing {
	background-color: #fff;
}

.rotate_base:nth-child(even) .rotate_bing {
	background-color: #ffb53b;
}

.rotate_name{
	position: absolute;
    transform: rotate(-22deg);
    top: 0.31rem;
    left: 1.5rem;
    display: block;
    color: #333;
    font-weight: bold;
    font-size: 0.31rem;
    display: block;
    width: 1.8rem;
    line-height: 1.5;
    text-align: center;
}

.rotate_img{
	position: absolute;
    transform: rotate(-24deg);
    top: 1.15rem;
    left: 2.3rem;
    display: block;
    display: block;
    width: 1rem;
    height: auto;
}

.draw_nav .pointer{
	position: absolute;
	width: 1.78rem;
	height: 2.26rem;
	background-image: url(../../img/experience/luck_index.png);
    background-size: 7.81rem 3.94rem;
    background-repeat: no-repeat;
    background-position: -5.04rem 0;
    left: 50%;
    margin-left: -.98rem;
    top: 3.4rem;
    padding-top: 0.93rem;
    z-index: 3;
}

.draw_nav .pointer p{
	font-size: 0.34rem;
	color: #FFFFFF;
	font-weight: bold;
	text-align: center;
	line-height: 1.5;
}

/**
 * 按钮区域
 */

.btn_area{
    display: flex;
    display: -webkit-flex; /* Safari */
    justify-content: space-between;
    margin-top: 0.39rem;
}

.btn_area .btn{
    width: 4.45rem;
    height: 1.25rem;
    background-image: url(../../img/experience/luck_index.png);
    background-size: 7.81rem 3.94rem;
    background-repeat: no-repeat;
    background-position: .05rem -0.86rem;
}

.btn_area .btn:last-child{
  background-position: .05rem -2.66rem;
}

/**
 * 中奖名单
 */

.luck_list{
    width: 100%;
    height: 4.38rem;
    background-image: url(../../img/experience/luck_list_bg.png);
    background-repeat: no-repeat;
    background-position: top center;
    background-size: cover;
    margin-top: 0.39rem;
    padding: 0.31rem 0.62rem;
}

.luck_list .title{
    text-align: center;
}

.luck_list .title > span{
    display: inline-block;
    color: #3d38fb;
    font-size: 22px;
    font-weight: bold;
    position: relative;
}

.luck_list .title > span:before{
    content: '';
    display: block;
    width: 10px;
    height: 10px;
    border-radius: 100%;
    position: absolute;
    top: 50%;
    margin-top: -5px;
    left: -20px;
    background-color: #3d38fb;
}

.luck_list .title > span:after{
    content: '';
    display: block;
    width: 10px;
    height: 10px;
    border-radius: 100%;
    position: absolute;
    top: 50%;
    margin-top: -5px;
    right: -20px;
    background-color: #3d38fb;
}

/*轮播区域*/
.luck_list_area{
    height: 2.92rem;
    width: 100%;
    overflow: hidden;
    margin-top: 0.23rem;
}

.luck_list_ul{
    height: 2.82rem;
    width: 100%;
    overflow: hidden;
}

.luck_list_ul > li{
    display: flex;
    display: -webkit-flex; /* Safari */
    justify-content: space-between;
    align-items: center;
    height: 0.94rem;
    font-size: 0.28rem;
}

.luck_list_ul > li .header_img {
    width: 0.62rem;
    height: 0.62rem;
    border-radius: 100%;
}

.luck_list_ul > li .info{
	flex: 1;
	padding: 0 .2rem;
}

.luck_list_ul > li span{
    display: inline-block;
    height: 0.94rem;
	line-height: 0.94rem;
}

.luck_list_ul > li span.name{
	overflow: hidden;
	width: 30%;
	margin-right: .2rem;
}

.luck_list_ul > li span.prize{
	overflow: hidden;
	width: 60%;
}

.luck_list_ul > li .time{
    height: 0.94rem;
	line-height: 0.94rem;	
}


/**
 * 模态框
 */

.modle_bg{
	position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    overflow: hidden;
    background: rgba(0, 0, 0, 0.5);
    height: 100%;
    width: 100%;
    z-index: 100;
    padding-top: 2.96rem;
}

.modle_area{
	width: 7.03rem;
	background-color: #FFFFFF;
	border-radius: 5px;
	margin: 0 auto;
}

.modle_area .title{
	height: 1.17rem;
	line-height: 1.17rem;
	border-bottom: 1px solid #dddddd;
	font-size: 0.37rem;
	text-align: center;
	position: relative;
}

.modle_area .title .close{
	position: absolute;
	top: 50%;
	left: 0.46rem;
	margin-top: -0.15rem;
    z-index: 999;
    width: 0.39rem;
    height: 0.39rem;
    z-index: 99;
}

.modle_area .title .close .close_btn {
    display: inline-block;
    width: 0.39rem;
    height: 2px;
    background: #333;
    font-size: 0;
    -webkit-transform: rotate(45deg);
}

.modle_area .title .close .close_btn:after {
    content: '/';
    display: block;
    width: 0.39rem;
    height: 2px;
    background: #333;
    -webkit-transform: rotate(-90deg);
}

.modle_content{
	padding: 0.78rem 0;
	text-align: center;
}

.modle_content > p{
	font-size: 0.37rem;
	font-weight: bold;
}

.modle_content img{
	margin-top: 0.46rem;
	width: 2.34rem;
	height: auto;
}


/*规则弹窗*/
.modle_rule{
    padding: 2rem 0.47rem 1.25rem;
}

.modle_rule .modle_area{
    width: 100%;
    max-height: 100%;
    overflow-y: auto;
}

.modle_rule .modle_area .title{
    border-bottom: none;
    font-size: 0.47rem;
    font-weight: bold;
}

.modle_rule .modle_area .title .close{
    margin-top: -0.19rem;
}

.modle_rule .text_content{
    text-align: left;
    padding: 0.47rem 0.46rem .78rem;
}

.modle_rule .text_content h4.title{
    height: 0.55rem;
    line-height: 0.55rem;
    font-size: 0.34rem;
    text-align: left;
    margin-bottom: 0.08rem;
}

.modle_rule .text_content p.content{
   font-size: 0.31rem;
   line-height: 1.8;
   text-align: left;
   margin-bottom: 0.31rem;
}
