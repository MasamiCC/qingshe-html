<script type="text/javascript">
	$(function(){
		$('.mui-content').scroll(function(){
			var top=$('.mui-content').scrollTop();
			var height=$('.mui-content').height();
			var c=$('.mui-content')[0].scrollHeight -top;
			if (c-44==height) {
				loadHistory()
			}
		})
	})
	var pageCount=1;
	var pageEnd=false;
	
	function loadHistory(){
		
		if (!pageEnd) {
			if (pageCount>=2) {
				pageEnd=true;
				mui.toast('没有更多数据了')
			}else{
				for( var i =0;i<10;i++){
					var html='<div class="shop_detail_pj_item">'
				    		+	'<div class="shop_detail_pj_left">'
				    		+		'<img src="../image/nohead.png" onerror="this.src=\'../image/nohead.png\'">'
				    		+	'</div>'
				    		+	'<div class="shop_detail_pj_right">'
				    		+		'<ul>'
				    		+			'<li class="user">风吹屁屁凉  <span class="user_lev"><i>V</i><small>1</small></span> </li>'
				    		+			'<li class="user_xinyu">'
				    		+				'<span class="pingjia_time ">发表于12小时前</span>'
				    		+			'</li>'
				    		+			'<li class="pingjia">'
				    		+				'<p>'
				    		+					'非常满意看起来感觉很好线条流畅用了感觉也很不错，不用再担心收到假币了，而且快递非常快，前一天下单第二天早上就收到......'
				    		+				'</p>'
				    		+			'</li>'
				    		+		'</ul>'
				    		+	'</div>'
				    		+'</div>'
					$("#pingjia_list").append(html);
				}
				pageCount++;
			}
			
		}else{
			mui.toast('没有更多数据了')
		}
	}
	
</script>