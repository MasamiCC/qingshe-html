/*主体*/
.index_nav{
	padding: 30px;
	background-color: #f4f4f4;
	width: 100%;
	min-width: 1500px;
	min-height: 100%;
}

.index_nav .row{
	margin-bottom: 25px;
	margin-right: 0px;
    margin-left: 0px;
}

.index_nav .row:before{
    content: " ";
    display: table;
}

.bgWhite{
	background: #fff;
}

.index_nav .row:after{
	content: '';
	clear: both;
	display: table;
}

.left_nav{
	width: 65%;
	/*padding: 0 15px;*/
	float: left;
	padding-left: 15px;
}

.right_nav:before{
	content: '';
	position: absolute;
	width: 1px;
	height: 260px;
	background: #ddd;
	top: 85px;
	left: 0;
	clear: both;
	overflow: hidden;
}

.right_nav{
	width: 32%;
	/*padding: 0 15px;*/
	float: left;
	position: relative;
}

/*
 * 用户个人信息
 */

.info_nav{
	width: 100%;
	background: #FFFFFF;
	/*padding: 25px 40px;*/
	/*height: 300px;*/
	position: relative;
	padding: 25px 40px 0px 40px;
}

.info_nav .title{
	color: #000000;
	font-size: 30px;
	font-weight: normal;
	margin-right: 15px;
}

.Bctitle{
	margin-bottom: 25px;
}

.Bctitle>div{
	display: inline-block;
	vertical-align: middle;
}

.BC_icon{
	font-size: 14px;
	color: #dfbd76;
	width: 80px;
	height: 28px;
	text-align: center;
	line-height: 28px;
	background: #000;
	border-radius: 4px;
}

.info_area{
	margin-top: 8px;
	margin-bottom: 15px;
	overflow: hidden;
}

.info_area .info_header{
	width: 155px;
	height: 155px;
	border-radius: 160px;
	overflow: hidden;
	float: left;
	margin-right: 60px;
	margin-top: 45px;
}

.info_area .info_header > img{
	width: 100%;
	height: 100%;
}

.info_area .info_personal{
	overflow: hidden;
}

.div_inline1{
	width: 44%;	
}

.div_inline2{
	width: 55%;
}

.BCline{
	width: 100%;
}
.div_inline{
	display: inline-block;
	vertical-align: top;
}

.info_area  .info_complet{
	height: 40px;
	line-height: 40px;
	display: inline-block;
	margin-bottom: 15px;
	overflow: hidden;
}

.info_area  .info_complet .info_title{
	color: #666666;
	font-size: 18px;
	overflow: hidden;
	display: inline-block;
}

.info_area  .info_complet .info{
	color: #333333;
	font-size: 18px;
	overflow: hidden;
	display: inline-block;
}

.info_complet .info_complet_icon{
	display: inline-block;
	width: 32px;
	height: 32px;
	background-image: url(../static/img/lay_index.png);
	background-repeat: no-repeat;
	overflow: hidden;
	position: relative;
	top: -4px;
	margin-right: 15px;
} 

.info_complet .info_complet_icon.BCicon_1{
	background-position: -331px -91px;
}

.info_complet .info_complet_icon.BCicon_2{
	background-position: -371px -91px;
}

.info_complet .info_complet_icon.BCicon_3{
	background-position: -250px -91px;
}

.info_complet .info_complet_icon.BCicon_4{
	background-position: -207px -91px;
}

.info_complet .info_complet_icon.BCicon_5{
	background-position: -412px -91px;
}

.info_complet .info_complet_icon.BCicon_6{
	background-position: 0 -90px;
}
.info_complet .info_complet_icon.BCicon_7{
	background-position: -453px -91px;
}
.info_complet .info_complet_icon.BCicon_8{
	background-position: 0 -90px;
}
/*right_nav*/
.mian_right{
	padding: 75px 0px 60px 60px;
}
.mian_right{
 	width: 100%;
 	text-align: center;
}
.mian_item{
	display: inline-block;
}
.mian_item .data_icon{
	display: inline-block;
	width: 70px;
	height: 70px;
	background-image: url(../static/img/lay_index.png);
	background-repeat: no-repeat;
}

.mian_item .data_icon.Bicon_1{
	background-position: -353px -135px;
}

.mian_item .data_icon.Bicon_2{
	background-position: -268px -135px;
}
.mian_left_item{
	width: 40%;
}
.mian_right_item{
	width: 59%;
}
.BC_num{
	font-size: 36px;
	color: #cda145;
	font-family: arial;
	margin: 35px 0;
}
.BC_font{
	font-size: 18px;
	color: #666;
}
.ty_font{
	text-align: center;
	font-size: 16px;
	color: #333;
}
/*查询时间*/
.se_time{
	font-size: 16px;
	color: #333;
	margin-right: 10px;
	margin-left: 30px;
}
.sele_time select{
	width: 110px;
	height: 40px;
	border: 1px solid #ddd;
	border-radius: 4px;
	font-size: 14px;
	text-indent: 15px;
	margin-right: 20px;
}
select.sel_month,select.sel_day{
	width: 95px;
}
.BCtop_icon{
	display: inline-block;
	padding: 10px 28px;
	background: #000;
	border-radius: 4px;
	color: #ccc;
	margin-left: 20px;
}
.BCtop_icon:hover{
	cursor: pointer;
}
.BC_bottom{
	background: #fff;
	padding: 25px 7px;
}
.sele_time{
	margin-bottom: 30px;
}

.sele_time input[type='text']{
	border:0;
	background: none;
	box-shadow:none;
	text-indent: 10px;
}
.sele_time label{
	border: 1px solid #ccc;
	display: inline-block;
	padding-right: 10px;
}
.time_icon img{
	margin-bottom: 3px;
}
.form-control:focus{
	box-shadow:none
}
.time_inline{
	display: inline-block;
}
/*table*/
.BC_table table{
	width: 100%;
	text-align: center;
}
.BC_table td,.BC_table th{
	height: 60px;
	line-height: 60px;
	width: 25%;
	text-align: center;
}
.BC_table th{
	font-size: 16px;
	background: #f5f0e7;
	border-top: 2px solid #ddd;
	/*padding-right: 15px;*/
}
.BC_table th:first-child{
	/*width: 30%;*/
}
.BC_table td{
	font-size: 14px;
	border-bottom: 1px dashed #ddd;
}
.zhi{
	font-size: 14px;
	color: #333;
	margin: 0 10px;
}
