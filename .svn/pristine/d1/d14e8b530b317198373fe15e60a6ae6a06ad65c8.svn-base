<script type="text/javascript">
	$(function(){
		$("#lingqu_btn").on('tap',function(){
			var mobile=$("#mobile").val();
			var code=$("#code").val()
			if (!(/^1(3|4|5|7|8)\d{9}$/.test(mobile))) {
				mui.alert('请输入正确的手机号码');
				return false;
			}else if(code==''){
				mui.alert('请输入验证码');
				return false;
			}else{
				$(".coupon_form_d").hide().eq(1).show()
			}
		})
		$('.send_code').on('tap',function(){
			if(!$(this).hasClass('clicked')){
				$(this).addClass('clicked');	
				var mobile=$("#mobile").val();
				if (!(/^1(3|4|5|7|8)\d{9}$/.test(mobile))) {
					mui.alert('请输入正确的手机号码');
					$(this).removeClass('clicked');	
					return false;
				}
				//ajax处理数据
				countDown('.send_code',10)
			}
		})
		$("#code_btn").on('tap',function(){
			var code=$('#code').val();
			if(code==''){
				mui.alert('请输入验证码');
				return false;
			}else{
				$(".coupon_form_d").hide().eq(2).show()
			}
		})
		$('.mui-icon-close-filled').on('tap',function(){
			$("nav").fadeOut();
			$(".mui-content").animate({
				bottom:0
			})
		})
	})
	var timer='';
	function countDown(ele,time){
		clearInterval(timer);
		timer=setInterval(function(){
			if(time>1){
				time--;
				$(ele).html(time+"s后重试");
			}else{
				$(ele).html('获取验证码').removeClass('clicked');
			}
		},1000)
	}
</script>