<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>设置wifi</title>
		<!--引入css-->
		<link rel="stylesheet" href="../../css/modle_common.css" />
		<style>
			.change_password_nav{
				padding: 30px 70px;
			}
			.change_password_nav > .title{
				font-size: 24px;
				color: #333333;
				text-align: center;
				font-weight: normal;
			}
			
			
			.error_none {
			    color: #ce3a26;
			    font-size: 16px;
			    text-align: right;
			    margin: 0px 0px;
			    display: none;
			}
			
			.input_box {
			    position: relative;
			    margin: 40px 0;
			}
			
			.icon_left {
			    position: absolute;
			    left: 11px;
			    top: 11px;
			    z-index: 5;
			    background-position: 0px 0px;
			    width: 30px;
			    height: 22px;
			    background-repeat: no-repeat;
			}
			.inp {
			    width: 100%;
			    height: 45px;
			    border: 1px solid #dddddd;
			    padding-left: 50px;
			    padding-right: 40px;
			    font-size: 16px;
			    border-radius: 5px;
			}
			
			.wifi_icon{
				background-image: url(../../img/wifi_icon.png);
				background-repeat: no-repeat;
				background-position: 0px 2px;
				height: 24px;
			}
			
			.wifi_passowrd_icon{
			    background-image: url(../../img/wifi_password.png);
			    background-position: 4px -2px;
			}
			.input_code {
			    width: 60%;
			    height: 45px;
			    border: 1px solid #dddddd;
			    padding-left: 40px;
			    padding-right: 40px;
			    font-size: 16px;
			    border-radius: 5px;
			}
			.code_btn {
			    width: 35%;
			    height: 45px;
			    border: 1px solid #dddddd;
			    font-size: 16px;
			    background-color: white;
			    color: #c2a15d;
			    cursor: pointer;
			    border-radius: 5px;
			}
			
			.btn_area{
				margin-top: 60px;
			}
		</style>
	</head>
	<body>
		<div class="change_password_nav">
			<h4 class="title">
				修改WIFI密码
			</h4>
			<form class="change_password_form">
				<div class="input_box">
		            <i class="wifi_icon icon_left"></i>
		            <input placeholder="请输入wifi名称" class="input_user inp wifi_name" type="text">
				</div>
		        <div class="input_box">
		            <i class="wifi_passowrd_icon  icon_left"></i>
		            <input placeholder="请输入wifi密码" class="input_user inp" type="text">
		        </div>
		        <div class='btn_area'>
		        	<input class="btn confirm fl" type="submit"  value="确定" />
		        	<a class='btn cancel fr'>取消</a>
		        </div>
			</form>
		</div>
		<script src="../../js/jquery-1.8.3.min.js"></script>
		<script>
			
			$(function(){
                 $('.wifi_name').val(GetQueryString("wifiName"));
			})
			
			function GetQueryString(name) {
			    var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)", "i");
			    var r = window.location.search.substr(1).match(reg);
			    if(r != null) return decodeURI(r[2]);
			    return null;
			}
			//点击取消
			$(document).on('click','.change_password_nav .cancel',function(){
				var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
			    parent.layer.close(index); //再执行关闭
			})
			
			//点击确定
			$(document).on('click','.confirm',function(){
                parent.$('#wifi_name').val(111);
                parent.$('#wifi_password').val(111);
				var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
			    parent.layer.close(index); //再执行关闭
			})
			        
		 
			$('.inp').bind('input propertychange', function() {  
				if($(this).val()){
					$(this).next().show()
				}else{
					$(this).next().hide()
				}
			}); 
			
			$('.close_icon').click(function(){
				$(this).prev().val(""); 
			})
	       

		   
			</script>
	</body>
</html>
