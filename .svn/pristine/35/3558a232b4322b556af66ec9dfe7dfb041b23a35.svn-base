<!DOCTYPE html>
<html >
	<head>
		<meta charset="UTF-8">
		<title></title>
		<link rel="stylesheet" type="text/css" href="../css/layout.css"/>
		<link rel="stylesheet" type="text/css" href="../css/layout_user.css"/>
		<link rel="stylesheet" type="text/css" href="../css/bootstrap.min.css"/>
		<link rel="stylesheet" type="text/css" href="../css/font-awesome-4.7.0/css/font-awesome.css"/>
		<style type="text/css">
			#save{
			    background-color: #edb94a;
   				border: none;
   				border-radius: 0;
   				padding-left: 20px;
   				padding-right: 20px;
			}
			#save:hover{
				background: #d3a749;
			}
			#reset{
				border: none;
				border-radius: 0;
			}
			#reset:hover{
				background: none;border: none;
			}
			.form-horizontal .control-label{
				padding-top: 7px;
				text-align: right;
			}
			.user_right{
				min-height: inherit;
			}
		</style>
		<script type="text/javascript">
			var isUser=true,key='my_account';
		</script>
		<script type="text/javascript" src="../js/angular.min.js"></script>
	</head>
	<body>
		<div class="main">
			<div class="user_div user_right" ng-app="addAddress" ng-controller="addCtrl" ng-init='loadAddress()'>
						<div class="">
							<div class="user_right_middle" >
								<div class="" >
									<form class="form-horizontal" role="form" style="width:95%;margin:20px auto;">
									  <div class="form-group">
									    <label for="name" class="col-xs-3 col-sm-2 control-label">原密码 </label>
									    <div class="col-xs-9 col-sm-10">
									      <input type="tel" class="form-control" id="name" placeholder="请输入原密码" ng-model='address.userName' maxlength="11">
									    </div>
									  </div>
									  <div class="form-group">
									    <label for="address" class="col-xs-3 col-sm-2 control-label">新密码</label>
									    <div class="col-xs-9 col-sm-10">
									      <input type="text" class="form-control" id="address" placeholder="请输入新密码" ng-model='address.area' >
									    </div>
									  </div>
									  <div class="form-group">
									    <label for="full_address" class="col-xs-3 col-sm-2 control-label">确认密码</label>
									    <div class="col-xs-9 col-sm-10">
									      <input type="password" class="form-control" id="full_address" placeholder="请输入确认密码" ng-model='address.address'  > 
									    </div>
									  </div>
									  
									  <div class="form-group" style="text-align: center;">
									    <div class="col-sm-offset-2 col-sm-10">
									      <button type="button" class="btn btn-primary" ng-click="submitAddress(address)" id="save">保存</button>
									      <button type="reset" class="btn  btn-default " ng-click="formReset()" id="reset">取消</button>
									    </div>
									  </div>
									</form>
								</div>
								
							</div>
							
							<div class="user_right_footer">
								
							</div>
						</div>
					</div>
		</div>
	</body>
	<script type="text/javascript" src="../js/jquery-1.8.3.min.js"></script>
	<script type="text/javascript" src="../js/common.js"></script>
	<script src="../js/user.js" type="text/javascript" charset="utf-8"></script>
	<script src="../js/user.js" type="text/javascript" charset="utf-8"></script>
</html>

