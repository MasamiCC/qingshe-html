<script src="../js/mui.picker.min.js" type="text/javascript" charset="utf-8"></script>
<script type="text/javascript">
	$(function(){
	
	$(".time_choose").bind({
		'click':function(e){
			e.preventDefault();
			var now=new Date();
			var picker = new mui.DtPicker({
				endDate:new Date(),
				type:'month',
			});
			picker.show(function(rs){
				console.log(rs.value)
				var time=new Date(rs.value);
				var year=time.getFullYear();
				var month=time.getMonth()+1;
				month=(month<10)?'0'+month:month;
				console.log(month)
				console.log(year)
				$(".show_m").html(year+"年"+month+"月");
//				mui('.mui-scroll-wrapper').scroll().scrollTo(0,0,100)
			})
			return false;
		}
		
	})
	
	
	var otherdonatehtml='<table border="0" cellspacing="0" cellpadding="0" width="100%">'
						+	'<tr><th>捐赠/群体</th><th>捐赠内容</th></tr>'
						+	'<tr><td>温州皮革厂</td><td>红烧肉100斤</td></tr>'
						+	'<tr><td>温州皮革厂</td><td>红烧肉100斤</td></tr>'
						+	'<tr><td>温州皮革厂</td><td>红烧肉100斤</td></tr>'
						+ '</table>'
	$(".table_con").html("");
	$(".table_con").append(otherdonatehtml);
})
</script>