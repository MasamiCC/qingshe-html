/*主体*/
.index_nav{
	padding: 30px 15px;
	background-color: #f4f4f4;
	width: 100%;
	min-width: 1500px;
	min-height: 100%;
}

/*详细信息*/
.black_info_nav{
	padding: 60px 30px;
	background-color: #FFFFFF;
	overflow: hidden;
	margin: 0 15px;
}

/*个人信息*/
.member_info{
	float: left;
	width: 40%;
}

.member_info .header_info{
	float: left;
	margin: 0 60px 0 30px;
	padding-top: 10px;
}

.member_info .header_info > img{
	width: 150px;
    height: 150px;
    border-radius: 100%;
}

.member_info .header_info .header_name{
	font-size: 30px;
	color: #000000;
	text-align: center;
	margin-top: 15px;
}

.info_personal{
	overflow: hidden;
}

.info_personal .info_complet {
    height: 40px;
    line-height: 40px;
    width: 100%;
    max-width: 345px;;
    margin-bottom: 20px;
    overflow: hidden;
}

.info_complet .info_complet_icon {
    display: inline-block;
    width: 32px;
    height: 32px;
    background-image: url(../static/img/lay_index.png);
    background-repeat: no-repeat;
    overflow: hidden;
    position: relative;
    top: -4px;
    margin-right: 15px;
}

.info_complet .info_title {
    color: #666666;
    font-size: 18px;
    overflow: hidden;
    display: inline-block;
}

.info_complet .info {
    color: #333333;
    font-size: 18px;
    overflow: hidden;
    display: inline-block;
}

.info_complet .info_complet_icon.icon_1 {
    background-position: -207px -91px;
}

.info_complet .info_complet_icon.icon_2 {
    background-position: -81px -90px;
}

.info_complet .info_complet_icon.icon_3 {
    background-position: -250px -91px;
}

.info_complet .info_complet_icon.icon_4 {
    background-position: -291px -91px;
}

/*收益信息*/
.active_nav{
	overflow: hidden;
}

.active_area{
	width: 25%;
	float: left;
	padding-top: 10px;
	text-align: center;
	position: relative;
}

.active_area.right_border{
	border-right: 1px solid #dddddd;
}

.active_area .data_icon {
    display: inline-block;
    width: 70px;
    height: 70px;
    background-image: url(../static/img/lay_index.png);
    background-repeat: no-repeat;
}

.active_area .data_num {
    font-size: 36px;
    color: #cda145;
    font-family: arial;
    height: 45px;
    line-height: 45px;
    margin: 25px 0;
}

.active_area .data_intro {
    font-size: 18px;
    color: #666666;
}

.active_area  .data_icon.icon_1 {
    background-position: -179px -137px;
}

.active_area  .data_icon.icon_2 {
    background-position: -266px -137px;
}

.active_area  .data_icon.icon_3 {
    background-position: 3px -136px;
}

/*签约商户列表*/
.business_list{
	margin-top: 20px;
}

.business_list > h4.title{
	font-size: 24px;
	font-weight: normal;
	height: 50px;
	color: #333333;
	border-bottom: 1px solid #dddddd;
	margin: 0 15px;
}

.account_list{
	overflow: hidden;
}

.account_list > li{
	float: left;
	width: 16.6%;
	padding: 0 15px;
	padding: 0 15px;
	margin-top: 30px;
}

.account_list .acount_area{
	background-color: #FFFFFF;
	border-radius: 10px;
	overflow: hidden;
	position: relative;
	cursor: pointer;
	height: 250px;
	-webkit-transition: .5s 0s all;
	-o-transition: .5s 0s all;
	-moz-transition: .5s 0s all;
	-ms-transition: .5s 0s all;
	transition: .5s 0s all;
}

.acount_area .acount_show{
	padding: 40px 0;
	text-align: center;
}

.acount_area .acount_show .header_ipc{
	width: 100px;
	height: 100px;
	border-radius: 100%;
	-webkit-transition: .5s 0s all;
	-o-transition: .5s 0s all;
	-moz-transition: .5s 0s all;
	-ms-transition: .5s 0s all;
	transition: .5s 0s all;
}

.acount_area .acount_show .black_icon{
	position: absolute;
    top: 0;
    right: 0;
    width: 66px;
    height: 66px;
}

.acount_area .acount_show .account_name{
	color: #333333;
	font-size: 24px;
	margin: 40px 0 10px;
	height: 36px;
	padding: 0 20px;
	overflow: hidden;
	text-overflow: ellipsis;
  white-space: nowrap;
	-webkit-transition: .5s 0s all;
	-o-transition: .5s 0s all;
	-moz-transition: .5s 0s all;
	-ms-transition: .5s 0s all;
	transition: .5s 0s all;
}

.acount_area .acount_show .account_phone{
	color: #666666;
	font-size: 16px;
}

.account_menu{
	position: absolute;
	left: 0;
	bottom: -50px;
	width: 100%;
	-webkit-transition: .5s 0s bottom;
	-o-transition: .5s 0s bottom;
	-moz-transition: .5s 0s bottom;
	-ms-transition: .5s 0s bottom;
	transition: .5s 0s bottom;
}

.account_menu > a{
	display: block;
	height: 50px;
	line-height: 50px;
	background-color: #333333;
	text-align: center;
	color: #dfbd76;
	font-size: 14px;
	-webkit-transition: .5s 0s all;
	-o-transition: .5s 0s all;
	-moz-transition: .5s 0s all;
	-ms-transition: .5s 0s all;
	transition: .5s 0s all;
}

.account_menu > a:hover{
	opacity: 0.8;
}

.account_menu img{
	position: relative;
	top: 2px;
	margin-right: 5px;
}

.account_list .acount_area:hover{
    box-shadow: 0px 0px 5px 5px rgba(0,0,0,0.1);
    -moz-box-shadow: 0px 0px 5px 5px rgba(0,0,0,0.1);
    -webkit-box-shadow: 0px 0px 5px 5px rgba(0,0,0,0.1);
}

.account_list .acount_area:hover .account_menu{
	bottom: 0px;
}

.account_list .acount_area:hover .header_ipc{
	width: 80px;
	height: 80px;
}

.account_list .acount_area:hover .account_name{
	margin: 15px 0 10px;
}



