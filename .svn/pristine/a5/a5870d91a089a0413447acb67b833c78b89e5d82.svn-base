<script type="text/javascript">
	$(function() {
		$("#close,#close1").click(function() {
			$("#s3").hide();
		});
		$('.serv').on('click', 'li', function() {
			$(this).toggleClass('active');
			var id = $(this).attr('id');
			if(id == 'service3') {
				$("#s3").show();
			}
		})
		
		//点击编辑按钮
		$(document).on('click','.editor_icon.text_editor',function(){
			$(this).closest('.synopsis_text').find('.editor').focus();
		})
		
		//时间按钮点击编辑
		$(document).on('click','.editor_icon.time_editor',function(){
			$(this).prev().datetimepicker('show');
		})
		
		//手机按钮点击编辑
		$(document).on('click','.editor_icon.phone_editor',function(){
			$(this).prev().focus();
		})

		//编辑按钮被点击
		$(document).on('click','.edit_img',function(){
			$(this).closest('.choose_logo_area').find('.file_input').click();
		})
		
		
		//监听input file被选择
		$(".file_input").on('change',function(){
			var self = this;
			if (!self.files.length) return;
			if (self.files.length > 1) {
				mui.alert("只允许上传一张图片!");
				return false;
			}else{
				//得到图片
				var file = self.files[0];
				//转换成base64格式
				var reader = new FileReader();
				reader.onload = function () {
					var result = this.result;    //data:base64 
					$(self).closest('.choose_logo_area').find('img').attr("src", result); 
					$(self).closest('.choose_logo_area').addClass('has_img');
				};
				reader.readAsDataURL(file);
			}
		})
		
		//删除按钮被点击
		$(document).on('click','.remove_img',function(e){
			e.stopPropagation()
			$(this).closest('.choose_logo_area').find('img').attr("src", '../img/no_pic.png'); 
			$(this).closest('.choose_logo_area').removeClass('has_img');
		})

	});
</script>
	































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































