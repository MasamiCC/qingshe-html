        verticalCentered:false,
        navigation:true,
        onLeave:function(index,nextIndex,direction){
        	//console.log(index);console.log(nextIndex);console.log(direction)
        	if (index==2&&nextIndex==1&&direction=='up') {
        		$(".Tright").fadeOut();
        	}else if(index==4&&nextIndex==5&&direction=='down'){
        		$(".Tright").fadeOut();
        	}else if(index==6){
        		$(".Tright").fadeOut();
        	}else if(index==5&&nextIndex==6&&direction=='down'){
        		$(".Tright").fadeOut();
        	}else{
        		$(".Tright").fadeIn();
        	}
        }
    });
  		
		
