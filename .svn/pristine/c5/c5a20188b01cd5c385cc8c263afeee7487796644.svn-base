/* CSS Document */
body,h1,h2,h3,h4,h5,h6,p,ul,ol,li,form,img,dl,dt,dd,table,th,td,blockquote,fieldset,div,strong,label,em{margin:0;padding:0;border:0;}
ul,ol,li{list-style:none;}
input,button{margin:0;font-size:12px;vertical-align:middle;}
body{font-size:12px;font-family:Arial, Helvetica, sans-serif; color:#333; margin:0 auto; }
table{border-collapse:collapse;border-spacing:0;}

a{color:#333;text-decoration:none;}
a:hover{color:#c00; text-decoration:underline;}

#wrap{ width:990px; overflow:hidden; height:1200px;}
.box-163css{ width:500px; height:900px; margin:220px auto; position:relative;}
.box-163css input{ margin-left:10px; border:none; border:1px solid #a10000; background:#c00; text-align:center; height:24px; line-height:20px; color:#fff; cursor:pointer;}

#dvMsgBox{
	width:100%!important;z-index: 99999;text-align: center;
 }  


#dvMsgBox .top{height:30px; width:100%;background:none}  
#dvMsgBox .top .right .title{height:100%;line-height:30px;color:#121111;vertical-align:middle;font-size:14px;overflow:hidden;text-align: center;font-weight:bold}  
#dvMsgBox .body{    padding-left: 0px;
    margin: 7px 0 15px 0;	}  
#dvMsgBox .body .right{padding-right:2px;}  
#dvMsgBox .body .right .ct{  
  vertical-align: middle;
  width: 100%;
  text-align: center;
  color:#161415;
  font-size: 14px;}  
#dvMsgTitle{margin-top:0}
#dvMsgBox .body .right .ct .pro{width:280px;border:solid 1px #6593cf;height:25px;background:#ffffff;line-height:23px;overflow:hidden;}  
#dvMsgBox .body .right .ct .pro .bg{width:0%;height:100%;background:#c9dffc;}  
#dvMsgBox .bottom{padding-left:0px;border-top:1px solid #e8e8ea}  
#dvMsgBox .bottom .right{height:100%;/*background:transparent url(right-corners.png) no-repeat right bottom;*/padding-right:0;}  
span.btn{display:inline-block;padding: 0 10px;  border-radius: 3px;  cursor:pointer; color:#087dff; border:none; height:25px; text-align:center; ;text-align:center; margin:0px auto;line-height: 25px;font-weight: bold;}  
span.btnfocus{ display:inline-block;padding: 0 10px;    border-radius: 3px;margin:0px auto; border:none; height:25px; cursor:pointer; color:#087dff;line-height: 25px;font-weight: bold;}  
#dvMsgBox .icon{width:32px;height:32px;float:left;margin-right:10px;}  
#dvMsgBox .error{background:url(icon-error.gif) no-repeat;}  
#dvMsgBox .info{background:url(icon-info.gif) no-repeat;}  
#dvMsgBox .warning{background:url(icon-warning.gif) no-repeat;}  
#dvMsgBox .clear{clear:both;}  
#dvMsgBox .height{height:10px;line-height:10px;}  
#ShowBolightBox{display:none;-moz-opacity:0.5;filter:alpha(opacity=50);opacity:0.5;background-color:#333;z-index:9999;position:absolute;left:0px;top:0px;}
#dvMsgBtns{ text-align:center; width:100%;margin:5px auto}
.div_small{
    width: 80%;
    margin: 0 auto;
    font-size: 12px;
    overflow: hidden;
    z-index: 99999;
    border-radius: 8px;
    text-align: center;
    background: rgba(255,255,255,0.9);
    padding: 10px 0px 4px 0;
}