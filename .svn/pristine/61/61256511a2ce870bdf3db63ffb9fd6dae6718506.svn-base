<script type="text/javascript">
	$(function(){
		function goToBlackcard(){
			callNative(tologinedBlackcard,weChatUrl,data);
		}
		
	mui.init()
	mui('.mui-scroll-wrapper').scroll({
	scrollY: false, //是否竖向滚动
	
	scrollX: true, //是否横向滚动
	
	startX: 0, //初始化时滚动至x
	
	startY: 0, //初始化时滚动至y
	
	indicators: true, //是否显示滚动条
	
	deceleration:0.0006, //阻尼系数,系数越小滑动越灵敏 减速系数，系数越大，滚动速度越慢，滚动距离越小，默认值0.0006
	
	bounce: true //是否启用回弹
	
	});
		
	});
	var swiper = new Swiper('#swiper-container1', {
        pagination: '.swiper-pagination',
        slidesPerView: 'auto',
        paginationClickable: true,
        spaceBetween: 0
    });
    var swiper2 = new Swiper('#swiper-container2', {
		slidesPerView:1.3,
		spaceBetween : 15,
		centeredSlides:true,
	})
	var active=0;
	swiper2.on('transitionEnd',function(){
		if(this.isEnd){
			active=this.slides.length;
		}else{
			active=this.activeIndex+1;
		}
		$('.yellow_font').html(active);
		
	})
	$(function(){
		function goToBlackcard(){
			callNative(tologinedBlackcard,weChatUrl,data);
		}
		loadList()
		mui.init()
		mui('.mui-scroll-wrapper').scroll({
			scrollY: false, //是否竖向滚动
			
			scrollX: true, //是否横向滚动
			
			startX: 0, //初始化时滚动至x
			
			startY: 0, //初始化时滚动至y
			
			indicators: true, //是否显示滚动条
			
			deceleration:0.0006, //阻尼系数,系数越小滑动越灵敏 减速系数，系数越大，滚动速度越慢，滚动距离越小，默认值0.0006
			
			bounce: true //是否启用回弹
		
		});
		var i;
		mui('.blackcard_title').on('tap','.duser',function(){
			mui('#popover').popover('show');
			swiper2.slideTo(active, 1000, false);//切换到第一个slide，速度为1秒
		    swiper2.update();
//		    debugger
		    i=true;
		    callNative(isswiper,weChatUrl,i);
		})
		$('.close_icon').click(function(){
			mui('#popover').popover('hide');
			i=false
			callNative(isswiper,weChatUrl,i);			
		});
	});
	function loadList(){
		$('#swiper-container2 .swiper-wrapper').html('');
		$('.allcount').html(qydata.length)
		for (var i in qydata) {
			var html='<div class="swiper-slide">'
				+		'<div class="swiperbg">'
				+   		'<div class="swiper_img">'
				+   			'<img src="images/'+qydata[i]['swiper_img']+'" alt="" />'
				+   		'</div>'
				+   		'<div class="swiper_title">'
				+   			qydata[i]['swiper_title']
				+   		'</div>'
				+   		'<div class="swiper_content">'
				+   			qydata[i]['swiper_content']
				+   		'</div>'
				+   		'<div class="open_soon_con">'
				+   			'<span class="open_soon">'
				+   				'立即开通领取特权'
				+   			'</span>'
				+   		'</div>'
				+   	'</div>'
				+      '</div>'
			
			$('#swiper-container2 .swiper-wrapper').append(html)
		}
		mui('.popover_cont').on('tap','.open_soon',function(){
			callNative('toJoinBlack');
		})
		swiper2.update();
	}
	
</script>