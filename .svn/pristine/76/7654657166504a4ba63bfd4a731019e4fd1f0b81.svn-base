*{
	padding: 0;
	margin: 0;
}
.blackcardnew{
	line-height: 0;
	font-size: 0;
	text-align: center;
}
.blackcardnew_bottom{
	background: url(../image/dalishibg.png) no-repeat;
	background-size:100% 100% ;
	padding: 0 15px;
	padding-bottom: 20px;
}
.blackcardnew img{
	max-width: 100%;
}
.blackrightline{
	display: flex;
	padding: 7px 0;
	font-size: 0.875rem;
}
.blackrightline>div{
	display: flex;
	justify-content: center;
	align-items: center;
}
.blackrightline_left{
	width: 45px;
}
.blackrightline_left img{
	width: 22px;
}
.blackcard_title{
	font-size: 1rem;
	border-bottom: 1px solid #ccc;
	padding: 10px 0;
	margin-bottom: 7px;
	font-weight: 550;
}
.blackrightline:last-child{
	border-bottom: 1px solid #ccc;
	padding-bottom: 14px;
}
.smallblackicon{
	width: 15px;
	height: 15px;
	margin-right: 7px;
}
.blackcard_explanation{
	font-size: 0.75rem;
	justify-content: flex-end;
	display: flex;
	color: #999;
	margin-top: 7px;
	padding-bottom: 10px;
	line-height: 1.5;
}
.blackcard_explanation>div{
    display: flex;
    justify-content: center;
    align-items: center;
}
.blackcardfont{
	text-align: center;
	margin: 12px 0;
}
.blackcardfont img{
	width: 60%;
}
.blackmission{
	display: flex;
	padding-top: 23px;
}
.blackmission>div{
	display: flex;
	justify-content: center;
	align-items: center;
}
.blackexplain{
    font-size: 0.875rem;
    color: #333333;
    box-shadow: 1px 1px 1px 2px #F1F1F1;
    border-radius: 8px;
    padding: 15px 25px;
    background-color: #fff;
    margin-top: 25px;
    margin-bottom: 25px;
}
.blackmission img{
	width: 60px;
}
.blackmissionleft{
	margin-right: 17px;
}
.blackexplain_title{
	font-weight: 600;
	    color: #333333;
}
.bmissionline>div,.bmissionline{
	display: flex;
}
.bmissionline{
	margin-top: 15px;
	    color: #333333;
}
.bmissionline_left{
    background: -moz-linear-gradient(top, #050102, #545353);
    background: -o-linear-gradient(top,#050102, #545353);
    background: -webkit-gradient(linear, 0% 0%, 100% 100%, from(#050102), to(#545353));
    color: #f8a120;
    padding: 0px 14px;
    border-radius: 20px;
    font-size: 0.8125rem;
    margin-right: 10px;
    min-width: 80px;
    height: 21px;
    line-height: 21px!important;
}
.bmissionline_right img{
	width: 17px!important;
	height: 17px;
	margin-right: 7px;
}
.bmissionline_right{
	font-size: 0.875rem;
}
.bottom_nav{
    text-align: center;
}
.bottom_nav_button{
	display: inline-block;
	color: #fff;
	background: #f8a120;
	font-size: 1rem;
	width: 100%;
	border-radius: 4px;
	height: 40px;
	line-height: 40px;
}
.bmission  div{
	line-height: 1.6;
}

/*new*/
.blackcard_firstitemcon{
	display: flex;
	columns: 3;
	flex-wrap: wrap;
	align-content: flex-start;
}
.blackcard_firstitem{
	margin-top: 15px;
	text-align: center;
	flex: 0 0 25%;
}
.blackcard_fipic img{
	max-width: 55%;
}
.blackcard_fifont{
	font-size: 0.75rem;
    color: #333;
    line-height: 1;
    margin-top: 8px;
}
.blackcard_explanation{
	border-top: 1px solid #ccc;
    padding-top: 7px;
    margin-top: 20px;
}
.blackrights .blackcard_title{
	margin-bottom: 3px;
}
/*new*/
