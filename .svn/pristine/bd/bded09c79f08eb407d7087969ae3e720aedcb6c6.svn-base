}*/
.chy_header_h img{
	max-width: 100%;
	text-align: center;
}
.chy_header_h{
	text-align: center;
}
.chy_header_h_con{position: relative;}
.rule_icons{
	display: inline-block;
}
.rule_icons img{
	width: 10%;
}
.rule_icons_con{
	line-height: 0;
	font-size: 0;
}
/*绿色banner*/
.christmas_menu{
	margin: 0 15px;
	height: 2.5rem;
}
.christmas_menu li{
	line-height: 21px;
}


/*绿色banner*/

/*yellow discount*/
.discount{
	line-height: 1;
	background: url(../image/christmas_tree.png) no-repeat left bottom;
	background-size: 8% 65%;
	font-size: 0.875rem;
}
.discount_fonts{
	color: #ffe671;
	text-align: center;
}
.discount_fonts{
	padding: 15px 0;
}
.newYear_t_bg{
	margin: 0 15px;
	line-height: 0;
	position: relative;
}
.discount_con{
	position: absolute;
	top: 16%;
    left: 13%;
}
@media only screen and  (max-width: 320px) {
	.discount_con{
		position: absolute;
		top: 12%;
	    left: 10%;
	}
}
@media only screen and  (min-width: 375px) {
	.discount_con{
		position: absolute;
		top: 18%;
	    left: 14%;
	}
}
@media only screen and  (min-width: 414px) {
	.discount_con{
		position: absolute;
		top: 21%;
	    left: 16%;
	}
}
.newYear_t_bg img{max-width: 100%;}
.discount_progress{
	margin-bottom: 12px;
}

/*yellow discount*/
/*green progress*/
.christmas_progressbar{height: 0.6rem;overflow: visible;background: #fff;}
/*green progress*/

.chy_main_item img,.chy_bottom img{
	max-width: 100%;
	text-align: center;
}
.chy_main_item{
	margin: 0px 20px 20px 20px;
	line-height: 0;
}
.chy_main_item:last-child{
	margin: 0px 20px 10px 20px;
}

.chy_main_con{
	text-align: center;
	filter: progid:DXImageTransform.Microsoft.Gradient(startColorStr='#FF0000',endColorStr='#F9F900',gradientType='0');
	background: -moz-linear-gradient(top, #900225, #ae021e);
	background: -o-linear-gradient(top,#900225, #ae021e);
	background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#900225), to(#ae021e));
}

