<script type="text/javascript">
	$(function(){
		removeCat();
		$("#save_new_cat").click(function(){
			var new_cat_name=$("#new_cat_name").val();
			if(!new_cat_name){
				alert('请输入分类名称');
				$("#new_cat_name").focus();
				return false;
			}
			var count=0;
			$('.goods_cat').each(function(){
				if ($(this).text()==new_cat_name) {
					count++;
				}
			})
			if (count==0) {
				//这个里边需要先通过ajax处理添加函数，根据处理结果在商品分类列表那边添加内容
				var li='<li class="goods_cat">'+new_cat_name+'<span data-id="2" class="del_cat"></span></li>'
				$('#goods_cat_list').append(li);
				$("#new_cat_name").val(''); 
				removeCat();
			}else{
				alert('新增分类已经存在，请重新编辑');
				$("#new_cat_name").focus();
			}
			
		})
	})
	function removeCat(){
		$(".del_cat").each(function(){
			$(this).bind({
				'click':function(){
					var id=$(this).attr('data-id');
					console.log(id);
					var remove=confirm('确定删除该分类');
					if(remove){
						//console.log()
						//需要先根据id进行ajax处理删除功能，根据返回更新商品分类列表
						$(this).parent().remove();
					}
				}
			})
		})
	}
</script>


