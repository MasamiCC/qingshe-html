		<link rel="stylesheet" href="../../css/mui.min.css">
		<style>
			*{list-style: none;margin: 0;padding: 0;outline: none;}
			html,
			body {
				background-color: #fff;
			}
			.mui-content{background: #fff;}
			.mui-slider-item .mui-scroll{padding-bottom: .75rem;}
			.mui-segmented-control.mui-scroll-wrapper{height: 40px;}
			#sliderSegmentedControl{box-shadow: 0 0 .3rem #999;}
			#sliderSegmentedControl .mui-scroll{background: #fff;width: 100%;display: flex;justify-content: space-around;height: 40px;}
			.mui-fullscreen .mui-segmented-control~.mui-slider-group{top: 40px;}
			.mui-segmented-control.mui-segmented-control-inverted .mui-control-item{position: relative;flex: 1;font-size: 1rem;padding: .1rem 0;}
			.mui-segmented-control.mui-segmented-control-inverted .mui-control-item:after{
				content: '';
				position: absolute;
				width: 1px;
				top: 12px;
				right: 0;
				bottom: 12px;
				background: #bbbbbc;
			}
			.mui-segmented-control.mui-segmented-control-inverted .mui-control-item:last-child:after{
				width: 0;
			}
			.mui-segmented-control.mui-segmented-control-inverted .mui-control-item.mui-active{
				color: #ef9c27;
			}
			.mui-slider .mui-segmented-control.mui-segmented-control-inverted~.mui-slider-group .mui-slider-item{
				border-top: none;border-bottom: none;
			}
			#item1mobile img{max-width: 100%;display: block;line-height: 0;}
			.parameter{padding: .5rem 0;}
			.parameter li{font-size: 0.92rem;margin: 0 1rem;color: #323333;line-height: 1.8;}
			.parameter p{margin-bottom: 0;color: #323333;}
			.parameter span{font-weight: 700;}
			.parameter span.block{display: block;}
			.faq_title{text-align: center;background: #f4f4f4;padding: .5rem 0;color: #323333;margin: 1rem 0;background-image: url(images/faq_title_bg.png)   ;background-position: center;background-size: contain;background-repeat: no-repeat;}
			.faq li{font-size: 0.92rem;color: #323333;margin: .5rem 1rem;line-height: 1.8;}
			.faq li div:nth-child(1){font-weight: 700;}
		</style>
