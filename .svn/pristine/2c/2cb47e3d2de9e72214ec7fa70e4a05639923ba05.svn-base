				                    +    '</div>'
				                    +    '<div class="collection_img">'
				                    +    	'<img src="../image/hotel_logo.png">'
				                    +    	'<img src="../image/hotel_logo.png">'
				                    +    	'<img src="../image/hotel_logo.png">'
				                    +    '</div>'
				                    +    '<div class="collection_count">'
				                    +    	'<div class="mui-pull-left">'
				                    +    		'<span><i class="fa fa-commenting-o"></i>122</span>'
				                    +    		'<span><i class="fa fa-thumbs-o-up"></i>122</span>'
				                    +    	'</div>'
				                    +    	'<div class="mui-pull-right">'
				                    +    		'2017-04-12 15:24'
				                    +    	'</div>'
				                    +    	'<div class="clear"></div>'
				                    +    '</div>'
						//下拉刷新，新纪录插到最前面；
						table.insertBefore(li, table.firstChild);
						
					}
					
					mui('#pullrefresh').pullRefresh().endPulldownToRefresh(); //refresh completed
					heartClick();
				}, 500);
			}
			var count = 0;
			/**
			 * 上拉加载具体业务实现
			 */
			function pullupRefresh() {
				setTimeout(function() {
					mui('#pullrefresh').pullRefresh().endPullupToRefresh((++count > 2)); //参数为true代表没有更多数据了。
					var table = document.body.querySelector('#collect_list');
					var cells = document.body.querySelectorAll('.mui-table-view-cell');
					for (var i = cells.length, len = i + 3; i < len; i++) {
						var size=mui('.collect_item').length;
						var li = document.createElement('li');
						li.className = 'mui-table-view-cell collect_item';
						li.innerHTML = ' <div class="collection_shop">'
				                    +    	'<div class="mui-pull-left">'
				                    +    		'<img src="../image/icon/texuan.png">轻奢美食汇'+size
