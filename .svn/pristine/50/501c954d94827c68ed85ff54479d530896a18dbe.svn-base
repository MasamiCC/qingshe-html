	loadRaty()
	function loadRaty(){
		$('.score').each(function(){
			var score=$(this).attr('data-score');
			$(this).raty({
		        score: score, //初始值是设置
		        path: '../image',
		        size: 24,
		        starHalf: 'icon3.png',
		        starOff: 'icon2.png',
		        starOn: 'icon1.png',
			})
    });
	}
	loadmainRaty();
		function loadmainRaty(){
		$('.nearby_item_item_score').each(function(){
			var score=$(this).attr('data-score');
