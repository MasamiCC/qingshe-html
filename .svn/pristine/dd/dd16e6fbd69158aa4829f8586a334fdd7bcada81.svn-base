.pj_add,.pj_add,.pj_detail_reply,.pj_detail{
				font-size: 0.75rem;
			}
			.pj_star{
				text-align: center;margin: 0 0 8px 0;
			}
			.pj_star img{
				max-width: 1.3rem;vertical-align: middle;
			}
			.pj_span{
				border: 1px solid #ddd;color: #ddd;border-radius: 2rem;text-align: center;
				width:2.5rem;
				display: inline-block;
			}
			.pj_span_up.pj_span_active{
				border-color: #f7bd33;
				color:#f7bd33 ;
				background: #fff8ea;
			}
			.pj_span_down.pj_span_active{
				border-color: #ddd;
				color:#9f9f9f ;
				background: #eee;
			}
			
			small{
				color: #999;
			}
			#goods_list:before,#goods_list:after{
				background: #eee;
			}
			#goods_list li{
				font-size: 0.875rem;color: #333;padding-left: 0;
			}
			#goods_list li:after{
				left: 0;background: #eee;
			}
			li.mui-active{
				background: #fff;
			}
			.mui-table-view-cell:hover{
				background: #fff;
			}
			.mui-table-view-cell.mui-active{
				background: #fff;
			}
			.index_item_title{
				padding-bottom: 0 ;
				background-image: url(../image/pj_title_bg.png);
				background-repeat: no-repeat;
				background-position: center;
				background-size: contain;
				margin-bottom: 10px;
				font-size: 1rem;
			}
			.sub_btn{
				margin: 8px  auto;
				border-radius: 5px;
				display: block;width: 80%;text-align: center;padding: 8px;color: #fff;background: #f7bd33;
			}
			.mui-content{
				position: absolute;
				width: 100%;
				overflow: auto;
			}
			.pj_add textarea{
				margin-bottom: 0;color: #666;font-size: 0.75rem;border: 1px solid #eee;
			}
			.pj_detail,.pj_detail_reply{
				background: #f5f5f5;padding: 5px;border-radius: 5px;color: #666;
			}
			.pj_detail_reply{
				margin-top: 10px;position: relative;
			}
			.shop_name{
				text-align: center;line-height: 2;font-size: 1.2rem;color: #333;
			}
			#triangle-up {
			    width: 0;
			    height: 0;
			    border-left: 10px solid transparent;
			    border-right: 10px solid transparent;
			    border-bottom: 20px solid #f5f5f5;
			    position: absolute;
			    top: -10px;
			    left: 10px;
			}